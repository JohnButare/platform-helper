@echo off

iff not exist Desktop.ini then
  echo No Desktop.ini to fix.
  quit 1
endiff

if IsFile Desktop.ini.hold attrib /q -shr Desktop.ini.hold
attrib /q -shr Desktop.ini

copy /q Desktop.ini Desktop.ini.hold

echo Folder properties, Customize, Change Icon..., pick any icon
start /pgm explorer /e,/select,%_CWD
pause 

attrib /q -shr Desktop.ini
copy Desktop.ini.hold Desktop.ini

attrib /q +shr Desktop.ini
del /q Desktop.ini.hold

echo Logoff and logon
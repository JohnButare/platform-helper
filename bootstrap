#!/bin/bash
. bash.bashrc
. function.sh

computer="$1" install="$2"; shift 2

! IsElevated && { EchoErr "bootstrap must be run as administrator"; pause; exit 1; }

ask 'Synchronize files' && SyncLocalFiles --src-older "$computer"
ask 'Install bootstrap' && inst --hint "$install" bootstrap "$@"
for app in "$@"; do ask "Install $app" && inst "$app" --hint "$install"; done

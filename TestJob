#!/usr/bin/env bash
. function.sh || exit

header "Test Job"

hilight "Configuration..."
echo "HOSTNAME=$HOSTNAME"
echo "USER=$USER"
echo "PATH=$PATH"
echo

hilight "Configuring vault..."
eval "$(hashi config environment)" || exit
echo

hilight "Testing credentials..."
echo "credential type=$(credential type)"
echo "test/key1=$(credential get test key1)"
echo

hilight "SSH Agent status..."
SshAgent status || exit

hilight "Testing scp..."
file="/tmp/now.txt"
GetTimeStamp > "$file" || exit
scp -P 608 "$file" "admin@nas3:$file" || exit

hilight "Counting up..."
for (( i = 0; i < 5; i++ )); do
	echo "$i"
	sleep 1
done

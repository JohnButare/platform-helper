#!/bin/bash
. app.sh

usage() {	echot "usage: WinSplit [start|startup|close|restart](start)";	exit $1; }
init() { program="$P32/WinSplit Revolution/WinSplit.exe"; }
run() {	init; args "$@"; ${command}Command; return "$?"; }

args()
{
	command='start'

	while [[ "$1" != "" ]]; do
		case ${1,,} in
			-h|--help) usage 0;;
			*) IsFunction ${1}Command && command=${1} || { echoerr "Unknown argument $1"; usage 1; };;
		esac
		shift
	done
}

IsInstalledCommand() { [[ -f "$program" ]]; }
IsRunningCommand() { IsTaskRunning "$program"; }
startCommand() { startupCommand; }

startupCommand()
{
	{ ! IsInstalledCommand || IsRunningCommand; } && return 1
	sudo "$program"
}

closeCommand()
{	
	IsElevated && IsRunningCommand && ProcessClose "$program"
}

restartCommand() { closeCommand && startCommand; }

run "$@"
@echo off

set LogDir=%@BatchDir[]\..\..\log
set LogFile=%LogDir\%1.txt

if not IsDir "%LogDir" md /s "%LogDir"
if not IsFile "%LogFile" touch "%LogFile"

iff IsFile "%LogFile" then
	alias log `echo [%_date %_time] %@UnQuote[%$] | tee /a "%LogFile"`
else
	alias log `echo [%_date %_time] %@UnQuote[%$]`
endiff


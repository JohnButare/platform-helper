#!/usr/bin/env bash
. function.sh

host="${1:-pi@pi1}"
platform="${2:-debian}"
user="${3:-jjbutare}"
fileHost="${4:-nas1}"

file="bootstrap-$platform"
destFile="/tmp/$file"

echo "Copying $file to $host:$destFile..."
scp "$BIN/$file" "$host:$destFile"
echo

echo "Execute the contents of the clipboard on $host..."
clipw "$file $user $fileHost"
ssh -t $host
@echo off
REM Initialize persistent shell settings (functions, aliases, etc.)

REM Common functions
iff exist "%TcStartDir\function.tc" then
  function /r "%TcStartDir\function.tc"
endiff

REM Common aliases
iff exist "%TcStartDir\alias.tc" then
  alias /r "%TcStartDir\alias.tc"
endiff

REM User specific initialization
iff "%UserProfile%" != "" .and. exist "%UserBin\TcInit.btm" then
  call "%UserBin\TcInit.btm"
endiff

@echo off

Do Until %# = 0
	set Drive=%@Replace[:,,%1]
	Gosub Delete
	shift
EndDo

goto Done

:DeleteList
for drive in (%DriveList) do gosub Delete
return

:Delete
iff %@remote[%drive] == 1 then
	echo Deleting drive %Drive:
	net use %Drive: /delete /yes >& nul:
endiff
return

:Done
quit 0
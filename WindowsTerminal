#!/usr/bin/env bash
. app.sh || exit

usage()
{
	ScriptUsage "$1" "\
Usage: $(ScriptName) [OPTION]... [start|close|profile|program|IsInstalled](start)
WindowsTerminal commands."
}

init()
{
	defaultCommand="start"
	program="$(FindInPath wt.exe)"

	profileName="WindowsTerminal"; IsPlatform wsl1 && profileName="WindowsTerminalWsl1"
	profileDir="$ADATA/Packages/Microsoft.WindowsTerminalPreview_8wekyb3d8bbwe/LocalState"
	profileMask="settings.json"
	
	${G}mkdir --parents "$profileDir" || return
}

closeCommand() { ! isRunningCommand && return 0; ProcessClose "$program"; } 
isInstalledCommand() { [[ -e "$program" ]]; }
isRunningCommand() { ! isInstalledCommand && return 1; IsTaskRunning "$program"; }

startArgs() { startArgs=( "$@" ); shift="$#"; }
startCommand() { ! isInstalledCommand && return; start "$program" "${startArgs[@]}"; }

profileUsage() { echot "Usage: $(ScriptName) profile dir|SaveDir|save|restore [<profile name>|default](latest)\n$(ScriptName) configuration."; }
profileArgStart() { profileArgs=(); }
profileArgs() { profileArgs=( "$@" ); (( shift+=$# )); }
profileCommand() { profile $noPrompt --app "$profileName" --method "$profileDir" --files "settings.json"  "${profileArgs[@]}" || usage 1; }

ScriptRun "$@"

#!/usr/bin/env bash
. app.sh || exit

usage() {	echot "usage: thunderbird [start](start)
  profile dir|SaveDir|save|restore [<profile name>|default](latest)"; exit $1; }

args()
{
	unset -v command help
	
	while (( $# != 0 )); do
		case "$1" in
			--help) help="--help";;
			IsRunning) command="IsRunning";; IsInstalled) command="IsInstalled";;
			*)
				! IsOption "$1" && [[ ! $command ]] && { CheckCommand "$1"; shift; continue; }
				[[ "${command}" == @(start|startup|profile|service) ]] && break
				UnknownOption "$1"
		esac
		shift
	done
	[[ ! $command ]] && command="start"
	[[ ! $command ]] && MissingOperand "command"
	[[ $help ]] && { IsFunction "${command}Usage" && ${command}Usage 0 || usage 0; }
	args=( "$@" )
}

init()
{ 
	title="*Mozilla Thunderbird*"

	case "$PLATFORM" in
		linux) program="/usr/lib/thunderbird/thunderbird";;
		mac) program="$P/Thunderbird.app";;
		win) program="$P/Mozilla Thunderbird/thunderbird.exe";;
	esac
}

run() {	args "$@" || return; init || return; ${command}Command "${args[@]}"; }
closeCommand() { ! IsRunningCommand && return 0; task close --title "$title" "$program"; }
IsInstalledCommand() { [[ -e "$program" ]]; }
IsRunningCommand() { IsTaskRunning "$program"; }
restartCommand() { closeCommand && startCommand; }

startCommand()
{
	! IsInstalledCommand && return 1
	start "$program" "$@"
}

profileCommand()
{
	closeCommand || return
	MakeDirOwner "$ADATA/../Roaming/Thunderbird" || return
	profile --app "Thunderbird" --method "$ADATA/../Roaming/Thunderbird" --files "*" "$@" || usage 1
}

run "$@"

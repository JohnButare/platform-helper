#!/usr/bin/env bash
. app.sh

init()
{
	command='startup'
	program="$P/AutoHotkey/AutoHotkeyU64.exe"
	keys="$DOC/data/bin/keys.ahk"
}

usage() { echot "usage: AutoHotkey [start|startup|close|restart](start)"; exit $1; }

args()
{
	while [[ "$1" != "" ]]; do
		case "$1" in
			--brief|b) ;;
			--help) usage 0;;
			IsRunning) command=IsRunning;; IsInstalled) command=IsInstalled;;
			*)
				IsFunction "${1,,}Command" && { command="${1,,}"; shift; continue; }
				[[ "$command" == @(start) ]] && break
				UnknownOption "$1"
		esac
		shift
	done
}

startCommand()
{
	! IsInstalledCommand && return 1; IsRunningCommand && return 0
	start "$program" "$@"
}

startupCommand()
{
	! IsInstalledCommand && return 0
	[[ ! -f "$keys" ]] && return 0
	IsRunningCommand && return 0
	
	pushd "$DATA/platform/win" > /dev/null || return
	start "$program" "$keys" || return
	popd > /dev/null || return
}

run() {	init; args "$@"; ${command}Command; }
IsInstalledCommand() { [[ -f "$program" ]]; }
IsRunningCommand() { IsTaskRunning "$program"; }
closeCommand() { ! IsRunningCommand && return 0; ProcessClose "$program"; } 
restartCommand() { closeCommand && startupCommand; }

run "$@"
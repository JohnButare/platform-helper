#!/bin/bash
. app.sh

usage()
{
	echot "\
usage: AutoHotKey [start|startup|close|restart](start)"
	exit $1
}

init()
{
	title=""
	program="$P/AutoHotkey/AutoHotkey.exe"
	GetFilename "$program" task
	keys="$DOC/data/bin/keys.ahk"
}

args()
{
	unset file server interactive verbose test
	command='start'

	while [ "$1" != "" ]; do
		case $1 in
			-h|--help) usage 0;;
			*) 
				if IsFunction ${1}Command; then
					command=$1
					args=( "${@:2}" )
					break; # remove if command does not have additional arguments
				else
					echo "Unknown argument $1"
					usage 1
				fi;;
		esac
		shift
	done
}

run()
{
	init
	args "$@"
	${command}Command "$args"
	exit "$?"
}

IsInstalledCommand() { [[ -f "$program" ]]; }
IsRunningCommand() { IsTaskRunning "$program"; }

startCommand()
{
	{ ! IsInstalledCommand || IsRunningCommand; } && return 1
	start "$program"
}

startupCommand()
{
	{ ! IsInstalledCommand || [[ ! -f "$keys" ]] || IsRunningCommand; } && return 1

	pushd "$(BatchDir)/win32" > /dev/nul
	start "$keys"
	popd > /dev/nul
}

closeCommand()
{	
	IsTaskRunning "$task" && process.exe -q "$task"
}

restartCommand() { closeCommand && startCommand; }

run "$@"
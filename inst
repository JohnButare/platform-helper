CompareAllInstall() { i BeyondCompare delta meld; }
MeldInstall() { run --package "meld"; }
MeldProfile() { profile restore default --app "meld" --method "$HOME/.config/dconf" --files '*'; }

CompareCoreInstall()
{ 
	header "Compare Core"

	if isInstallable BeyondCompare; then
		i BeyondCompare
	else
		pkg meld
	fi
}

BeyondCompareInstall()
{
	header "Beyond Compare"

	# can't check Linux version	
	IsPlatform linux && BeyondCompare IsInstalled && [[ ! $force ]] && return

	# install
	local v; v="$(getVersionCurrent "BeyondCompare")" || return
	run --no-header --name "BeyondCompare" "$(beyondCompareDir)/BCompare-${v}_x64.msi|BCompareOSX-${v}.zip|bcompare-${v}_amd64.deb" --version=$v || return
}

BeyondCompareDownload()
{
	local app="BeyondCompare"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "BeyondCompare")" || return

	local file files=("BCompare-${v}_x64.msi" "BCompareSetup-$v.zip" "BCompareOSX-${v}.zip" "bcompare-${v}_amd64.deb")
	for file in "${files[@]}"; do
		download "https://www.scootersoftware.com/files/$file" "$(beyondCompareDir)" "$file" || return
	done

	downloadDone "$app" "$v"
}

beyondCompareDir() { echo "other/Scooter Software/Beyond Compare/setup"; }
beyondCompareVersion() { curl --silent "https://www.scootersoftware.com/download.php" | grep "/files/BCompare-" | head -1 | cut -d'-' -f2 | cut -d" " -f1 | RemoveEnd ".exe\""; }

BeyondCompareProfile()
{
	echo "- Help|Preferences, Enter Key..."
	IsPlatform mac && echo "- Beyond Compare, Install Command Line Tools…"
	BeyondCompare profile restore default "${globalArgs[@]}" || return	
}

BeyondCompareRegister() { register "BeyondCompare"; }


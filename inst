RubyInstall()
{
	case $PLATFORM in
		win) 
			! which ruby >& /dev/null && { cygwin package ruby || return; }

			$makeDir ~/bin || return
			$hide ~/bin || return
			ScriptEval SetVar --path PATH ~/bin || return

			$makeDir ~/.gem || return
			$hide ~/.gem || return
			;;
		mac)
			echo "gem: -n/usr/local/bin" >> ~/.gemrc
			;;
	esac
}

PythonInstall()
{	
	printf "**************************************************\n* Python\n**************************************************\n"

	ScriptEval intel SetProxy || return
	
	if [[ "$PLATFORM" == "win" ]]; then
		! which python >& /dev/null && { cygwin package python || return; }
		$makeDir ~/.cache ~/.pip || return
		$hide ~/.cache ~/.pip || return
		! which pip >& /dev/null && { get-pip.py || return; }
	else
		! which pip >& /dev/null && { sudo easy_install pip	|| return; }
	fi

	# pip: https://packaging.python.org/tutorials/installing-packages/ https://pip.pypa.io/en/stable/installing/
	! which pip >& /dev/null && { python -m ensurepip --default-pip || return; }
	! which pip >& /dev/null && { get-pip.py || return; }
	! which pip-review >& /dev/null && { pip install pip-tools || return; }
}


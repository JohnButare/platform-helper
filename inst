AppHostInstall() { i hostname AppHostHardware AppHostSoftware; } # get correct hostname first

AppHostHardwareInstall()
{
	local commonHw="LogitechOptions"

	case "$hostname" in
		bc) i IntelChipset IntelThunderboltDriver $commonHw;;
		flo|fun|jane|pants) i $commonHw;;
		oversoul) i IntelChipset IntelThunderboltDriver $commonHw;;
		rosie) i nVidiaDriver IntelThunderboltDriver IntelDriverUpdate RealtekCardReader $commonHw;;
	esac
}

AppHostSoftwareInstall()
{
	local common="1Password 1PasswordCli CryFS dropbox obsidian office writage GitCore"
	local commonLaptop="WireGuard" commonLaptopMac="batteries"
	local commonMac="$common alfred bartender BetterDisplay CleanMyMac moom MouseBoost numi rectangle shottr SoundSource spark"
	local serverCommon="cron"
	local serverCore="StaticIp ChronyServer DhcpServer DnsServer LoadBalancer rtc VpnServer"
	local serverServices="NomadServerTools ApacheDockerConfig PoolDashPanel NodeRed" # HomeAssistantServer HomeAssistantCli HomeAssistantIntegrations
	local fileServer="FileServer GitServer"

	# base software
	case "$hostname" in
		flo|fun|jane|pants) i $commonMac $commonLaptop $commonLaptop;;	# Mac Laptop
		bc|micro|ultron) i $common;;																		# Windows Desktop
		rosie) i $common $commonLaptop;;																# Windows Laptop
	esac

	# server software
	case "$hostname" in
		pi1|pi2|pi3|pi4) i $serverCommon $serverCore;;										# core servers
		rp1|rp2) i $serverCommon $serverServices FileServer GitServer;;		# file servers
		pi?|rp?|zima?) i $serverCommon $serverServices;;									# other Servers
	esac

	# other software
	case "$hostname" in

		# server
		pi2) i HomebridgeWiggin || return;;
		pi6) i DomotzAgentInstall || return;; 												# Domotz Agent cannot be on load balancer (conflicts with keepalived)
		pi7) i PiSugarUps PoolTemperature PoolController PiSugarUps;; # pool pad
		pi9) i HomebridgeWiggin unifi || return;;

		# Mac
		ender) i 1Password 1PasswordCli amphetamine dymo FreeFileSync NetbootxyzDocker;;
		flo|fun) i DriveTime flighty ValetCarControl;;
		jane|pants) i BetterTouchTool;;

		# Windows
		bc|rosie) i Quicken thunderbird;;
	esac
}

AppNetworkInstall()
{
	networkVars || return
	header "${NETWORK^} Applications"

	# network
	case "$NETWORK" in
		hagerman)
			i borgbackup glances hashi unison || return
			wiggin sync credential || return
			;;
	esac

	# network dependencies
	i SystemUser || return # depends on Hashi for credentials

	# domain
	case "$NETWORK_DOMAIN" in
		coexist) i DriveTime  || return;;
	esac

	# management
	manageSystem && { i JumpCloud || return; }

	return 0
}

#
# Application Directories (appdata appconfig)
#

# $DATA/app[data|config][w] app[data|config]N[w] ...
#	- no numeric suffix for boot drive or first data drive
#	- w suffix for Windows file system, otherwise native file system
#	- store group data in links to ../GROUP, i.e. ../games ($data/games $WIN_DATA/games)

AppDirInstall()
{
	local drive; for drive in {1..10}; do appDataSetup $drive || return; done # data drives
	appDirCreate "$DATA" && RunPlatform appDir															  # boot drive and platform
}

appDirWin()
{
	# data drives
	local drive drives; IFS=$'\n' ArrayMakeC drives drive list || return
	for drive in "${drives[@]}"; do appDataWinSetup "$drive" || return; done

	# boot drive
	appDirCreate "$WIN_DATA" "" "w" || return

	# move Windows executables to the Windows file system for perfomrance and reliability
	[[ ! $force && -L "$DATA/platform/win" && -d "$DATA/platform/win_arm" ]] && return

	makeLink --symbolic --merge "$DATA/appdataw/win" "$DATA/platform/win" || return
	makeLink --symbolic --merge "$DATA/appdataw/win_arm" "$DATA/platform/win_arm" || return

	FileHide "$DATA/platform/win/".*_sync.txt || return
	FileHide "$DATA/platform/win_arm/".*_sync.txt || return

	SyncLocalFiles --source-older --no-user $host || return # ensure file times are not changed
}

# appDataSetup N - setup data drive N
appDataSetup()
{
	local n="$1" dir; dir="$(drive mount root)/data$n"
	[[ ! -d "$dir" ]] && return

	# no prefix for first data drive	
	(( n == 1 )) && n=""

	# setup data drive permissions
	sudoc chown "$USER" "$dir" || return
	! IsPlatform mac && { sudoc chgrp "$USER" "$dir" || return; }

	# create directories and links
	appDirCreate "$dir" "$n" || return

	return 0
}

# appDataSetup N - setup data drive N
appDataWinSetup()
{
	local n="$1" label; label="$(drive label "$n")"; [[ ! "$label" =~ ^data ]] && return
	local dir="$(drive root "$n")" suffix="w"; n="$(echo "$label" | sed 's/^data//')"
	appDirCreate "$dir" "$n" "w" || return
}

# appDirCreate PATH [N] [w] - create application directories at PATH
appDirCreate()
{
	local path="$1" n="$2" suffix="$3"
	appDirLink "$path" "appconfig" "$n" "$suffix" || return
	appDirLink "$path" "appdata" "$n" "$suffix" || return
}

appDirLink()
{
	local path="$1" dir="$2" n="$3" suffix="$4"; [[ "$n" == "1" ]] && n=""
	makeDir "$path/$dir" || return
	
	if drive IsWin "$path"; then 
		makeLink --junction --merge "$path/$dir" "$WIN_DATA/$dir${n}" || return								# hard link from $WIN_DATA to data drive
		makeLink --symbolic --merge "$WIN_DATA/$dir${n}" "$DATA/$dir${n}${suffix}" || return	# symbolic link from $DATA to boot drive
	else
		makeLink --symbolic --merge "$path/$dir" "$DATA/$dir${n}${suffix}" || return
	fi
}

#################################################
# Installs
#################################################

UpdateInstall() { local apps; apps=( $(inst update) ) && i "${apps[@]}"; }

DownloadInstall()
{
	! UpdateNeeded "install-download" && return

	local app apps=(1Password 1PasswordCli Alfred AltTab BalenaCli BalenaEtcher Bartender BetterDisplay BeyondCompare CleanMyMac Docker Dropbox Firefox Fork GitKraken Hashi iTerm KarabinerElements NoMachine Obsidian Rectangle Shottr Slack SoundSource Sublime SublimeMerge Teams VisualStudioCode Warp)

	# regular downloads
	for app in "${apps[@]}"; do i "${app}Download" || return; done

	# beta downloads
	local installType="beta" skip=(Alfred)
	for app in "${apps[@]}"; do
		IsInArray --case-insensitive "$app" skip && continue
		downloadCheck "$app" && { i "${app}Download" || return; }; 
	done

	UpdateDone "install-download"
}

FinalInstall()
{
	local app apps=(bootstrap 1Password BeyondCompare CreativeCloud Dropbox Edge Firefox Fork Intel Java JetBrains LogitechOptions NotepadPp nVidia Plex Python Sonos Sublime Thunderbird VisualStudio Zoom)
	printf "final..."
	for app in "${apps[@]}"; do
		printf "$app..."
		i --no-header --no-prompt "${app}Final" || return
	done
	echo "done"
}

RegisterInstall()
{
	local app apps=(1Password alfred BetterDisplay BeyondCompare CleanMyMac firefox GitHub MaxTo rectangle SoundSource sublime SublimeMerge TidyTabs)
	local isRegistering="true"
	noRegister="" # force registration
	for app in "${apps[@]}"; do i --no-header "${app}Register" || return; done
}


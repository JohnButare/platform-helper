{
	FindFile "Shareware" || return
	echo "Found Shareware in $file"
}

bootstrap()
{
	printf "**************************************************\n* Bootstrap\n**************************************************\n"

	coreDirs || return
	i bash || return
	Bootstrap${PLATFORM^} || return
	app || return
}

coreDirs()
{
	$makeDir "$_root/temp" || return
	$makeDir "$_data/doc" || return
	$makeDir "$_data/log" || return
	$makeDir "$pdoc/drop" || return

	case "$PLATFORM" in
		win) 
			$makeDir "$pp/Applications/Other" || return
			$makeDir "$pp/Operating System/Other" || return

			$makeDir "$up/Applications" || return

			$makeDir "$_DataDrive/temp" || return
			$makeDir "$_DataDrive/Program Files" || return
			$makeDir "$_DataDrive/Users/Public" || return
			;;
	esac
}

BootstrapWin()
{
	i cygwin WindowsSetup console HiddenStart SysInternals || return
}

BootstrapMac()
{
	if ask "Install brew"; then
		ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go/install)" || return
		brew doctor || return
		brew update || return
	fi

	ask "Install brew packages" && 
		{ brew install bash cask coreutils findutils git fping nmap dialog exiftool wget wakeonlan || return; }

	ask "Update path" && { sudo bash -c 'echo "/usr/local/data/bin
/usr/local/data/platform/mac
/usr/local/sbin" > /etc/paths.d/wiggin' || return; }

	if ask "Disable dock"; then
		defaults write com.apple.dashboard mcx-disabled -boolean true || return
		killall Dock || return
	fi	
}

BootstrapLinux() 
{
	local server="nas1"

	# core configuration
	sudo apt-get install -y cifs-utils nmap openssh-server fping gcp dialog net-tools apt-transport-https libgnome2-bin xclip || return
	sudo systemd-resolve --set-dns=192.168.1.2,192.168.1.1  --interface=ens33 || return
	sudo systemd-resolve --set-domain=hagerman.butare.net --interface=ens33 || return
	export PATH=~/Volumes/public/documents/data/bin:$PATH

	# mount //$server/public
	mkdir -p ~/"Volumes/public" || return
	sudo bash -c 'echo "//'$server'/public /home/$SUDO_USER/Volumes/public cifs username=$SUDO_USER,noauto,rw,users 0 0" >> //etc/fstab' || return # make share read/write without using sudo
	mount.cifs "//$server/public" ~/"Volumes/public" || return

	# sync local files
	sudo mkdir "/usr/local/data" || return; sudo chown $USER "/usr/local/data" || return
	SyncLocalFiles slf --src-older "$server"

	# other configuration
	gsettings set org.gnome.desktop.session idle-delay 0 || return # do not blank screen
	sudo mkdir "$PUB" || return; sudo chown $USER "$PUB" || return
}

app()
{
	printf "**************************************************\n* Applications\n**************************************************\n"

	echo 'Installing $COMPUTERNAME hardware...'
	case "$COMPUTERNAME" in
		oversoul) i nVidia GigabyteMotherboard IntelUtilities || return;;
		ultron) i nVidia GigabyteMotherboard IntelUtilities || return;;
	esac

	echo "Installing $USERNAME core applications ..."
	case "${USERNAME#ad_}" in
		jjbutare) i AutoHotKey AquaSnap BeyondCompare notepadpp StandardNotes sublime TaskLayout || return;;
	esac

	echo 'Installing core applications...'
	i python ruby DropBox 7Zip firefox BrowserHomePage GreenShot || return

	echo "Installing $COMPUTERNAME applications..."
	case "$COMPUTERNAME" in
		bean) i office duet ParallelsDesktop  || return;;
		oversoul) i office iCloud QuickBooks Quicken thunderbird VmwareWorkstation || return;;
		ultron) i office || return;;
		jjbutare-mobl*) i GlassWire LogitechOptions || return;
	esac

	echo 'Installing applications...'
	i IntelCore DevCore GameCore MediaCore PiCore SshCore TravelCore UtilityCore || return
}


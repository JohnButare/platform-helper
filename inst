ChromeInstall()
{
	local v; v="$(getVersionCurrent "chrome")" || return
	local platform="$(getPlatform "win64" "mac")"
	local ext="$(getPlatform "exe" "dmg" "deb")"
	run --name="Chrome" "$(chromeDir)/chrome-$v-$platform.$ext" --version="$v" --elevate
}	

SlackFinalWin() {	mergeDir "$up/Slack Technologies Inc" "$up/Applications/Other" && $rm "$ud/Slack.lnk" && registry 32 delete "urun/com.squirrel.slack.slack"; }

ChromeDownload()
{
	local dir="$CODE/playwright"
	local test="$dir/tests/chrome.download.spec.ts"
	[[ ! -f "$test" ]] && return

	# initialize download
	local app="chrome"; downloadStart "$app" || return 0	

	# download	
	hilight "Downloading Chrome..."
	pushd "$dir" >& /dev/null || return
	npx playwright test --project=chromium "$(GetFileName "$test")" --reporter null || return
	popd > /dev/null || return

	# save
	local item items=("google-chrome-stable_current_amd64.deb:linux" "googlechrome.dmg:mac" "ChromeStandaloneSetup64.exe:win64")

	printf "Moving..."
	for item in "${items[@]}"; do
		StringToArray "$item" ":" item		
		local src="${item[0]}" platform="${item[1]}" 

		local ext="$(GetFileExtension "$src")"
		local v; v="$(chromeVersionPlatform "$platform")" || return
		local dest="chrome-$v-$platform.$ext"
		log1 "dest=$dest"

		# change to download directory and check if destination file exists
		local file; findFile "$(chromeDir)" || return
		[[  -f "$file/$dest" ]] && (( forceLevel < 2 )) && continue
		local destDir="$file"

		# move
		printf "$dest..."
		mv "/tmp/$src" "$destDir/$dest" || return
	done
	echo "done"

	downloadDone "$app" "$v"
}

chromeDir() { echo "other/Google/Chrome/setup"; }
chromeVersion() { chromeVersionPlatform "mac_arm64"; } # linux mac mac_arm64 win64
chromeVersionPlatform() { curl --silent "https://versionhistory.googleapis.com/v1/chrome/platforms/$1/channels/stable/versions" | sponge | jq '.versions[] | .version' | shead -1 | RemoveQuotes; } # linux mac mac_arm64 win64


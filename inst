NoMachineInstall()
{
	local v; v="$(getVersionCurrent "NoMachine")" || return
	run --name="NoMachine" "$(noMachineDir)/NoMachine $v.exe|NoMachine $v.dmg|NoMachine $v.deb" --version="$v"
}

NoMachineFinalWin() { $rm "$pd/NoMachine.lnk" && mergeDir "$pp/NoMachine" "$oo" && moveAppData "NoMachine" || return; }
NoMachineProfile() { NoMachine profile restore default && NoMachine startup; }

NoMachineDownload()
{
	local app="NoMachine"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local vShort="$(GetWord "$v" 1 .).$(GetWord "$v" 2 .)"
	local item items=("Linux-_amd64-deb" "MacOSX--dmg" "Windows-_x64-exe")

	for item in "${items[@]}"; do
		local plat="$(GetWord "$item" 1 -)" suffix="$(GetWord "$item" 2 -)" ext="$(GetWord "$item" 3 -)"
		local url="https://download.nomachine.com/download/$vShort/$plat/nomachine_${v}_"'${i}'"${suffix}.${ext}"
		noMachineFindUrl || return
		download "$url" "$(noMachineDir)" "$app $v.$ext" || return
	done

	downloadDone "$app" "$v"
}

noMachineDir() { echo "shareware/NoMachine"; }

# noMachineFindUrl - find the version to download, NoMachine does not make this easily accessible
# - the url includes ${i} as a substitution for the version, i.e. nomachine_8.4.2_${i}_x64.exe
noMachineFindUrl()
{
	local i result tryUrl

	printf "finding $plat..."
	for (( i = 1; i <= 20; i++ )); do
		logp1 "$i..."
		tryUrl="$(eval echo $url)"
		checkUrlDownload "$tryUrl" && { echo "found"; url="$tryUrl"; return; }
		printf "."
	done

	echo "not found"; return 1
}

noMachineVersion() { curl --location --silent -A "$(getAgent)" "http://NoMachine.com" | grep "Mac -" | sed 's/.* Mac - //' | cut -d" " -f1; }

TigerVncInstall()
{
	header "TigerVNC" # https://github.com/TigerVNC/tigervnc/releases
	echot "- uncheck all Server configuration options"
	run "shareware/TigerVNC/tigervnc64-1.8.0.exe"  || return
}

TigerVncFinalWin() { mergeDir --rename "$pp/TigerVNC 64-bit" "$oo/TigerVNC"; }


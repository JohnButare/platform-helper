	fi

	makeDir "$udata/Sublime Text" || return
	IsPlatform win && { makeDir "$adata/Sublime Text 3" || return; }
	sublime profile restore default || return

	if ask 'Add license'; then
		echo '- Enter license'
		sublime start || return
	fi
}


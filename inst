UltraMonInstall()
{
	local prefix="platform/win/UltraMon"
	run --name "UltraMon" "$prefix/setup/UltraMon_3.4.1_en_x64.msi" || return # https://www.realtimesoft.com/ultramon/download.asp
	
	# icons	
	local dest="$P/UltraMon/icons" stage="$WIN_ROOT/temp/icons" result=1
	[[ ! $force && -d "$dest/Leapo Windows 7" ]] && return	
	echo "Copying icons..."
	findFile "$prefix/icons" || return # https://www.realtimesoft.com/ultramon/addons.asp#Icons
	CopyDir --recursive "$file" "$stage" && RunScript --elevate --wait --verbose -- CopyDir --recursive "$stage" "$dest" && result=0
	rm -fr "$stage"; return $result
}


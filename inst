}

GitForWindowsFinalWin()
{
	gitForWindowsConfigure || return
	! CanElevate && return

	mergeDir "$pp/Git" "$pp/Development/Other" || return
	mergeDir "$up/Git" "$pp/Development/Other" || return
	$rm "$up/Git for Windows.lnk"	|| return

	# context menus
	registry delete "HKEY_CLASSES_ROOT/Directory/shell/git_gui/"
	registry delete "HKEY_CLASSES_ROOT/Directory/shell/git_shell/"
	registry delete "HKEY_CLASSES_ROOT/Directory/Background/shell/git_gui/"
	registry delete "HKEY_CLASSES_ROOT/Directory/Background/shell/git_shell/"
}

GitForWindowsConfigureInstall() { gitForWindowsConfigure; }

gitForWindowsConfigure()
{
	local type="--system"; ! CanElevate && type="--global"
	CanElevate && ! IsElevated && { elevate inst GitForWindowsConfigure "${globalArgs}"; return; }	

	local gw="$P/Git/cmd/git.exe"
	"$gw" config $type http.sslcainfo "$(utw "$P/Git/usr/ssl/certs/ca-bundle.crt")" || return
	"$gw" config $type core.fscache true || return
	"$gw" config $type core.autocrlf false || return
	"$gw" config $type credential.helper wincred || return
	gitFixWin "$gw" "$type" || return
}

GitKrakenInstall()
{
	header "Git Kraken"

	# check version
	local f v; v="$(getVersionCurrent "GitKraken")" || return; f="GitKraken Setup $v"

	# install	alternate (Linux) version in Windows
	IsPlatformAll win,x64 && [[ ! $alternate ]] && { alternate="--alternate" i --no-header GitKraken || return; }

	# install	
	run --no-header --name="GitKraken" "$(gitKrakenDir)/$f.$(getWin)|$f$(getArch " amd64").dmg|$f.deb" --version="$v" --copy-local-win || return
}

GitKrakenProfile() { GitKrakenHelper profile restore default; }
GitKrakenFinalWin() { mergeDir "$up/GitKraken" "$up/Development/Other" && gitForWindowsConfigure; }

GitKrakenDownload()
{	
	local app="GitKraken"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "GitKraken")" || return
	local url urls=("https://release.axocdn.com/win64/GitKrakenSetup.exe" "https://release.axocdn.com/darwin/installGitKraken.dmg" "https://release.axocdn.com/darwin-arm64/installGitKraken.dmg" "https://release.axocdn.com/linux/gitkraken-amd64.deb")

	for url in "${urls[@]}"; do

		local file="GitKraken Setup $v"
		if [[ "$url" =~ /linux/ ]]; then file+=".deb"
		elif [[ "$url" =~ /darwin-arm64/ ]]; then file+=".dmg"
		elif [[ "$url" =~ /darwin/ ]]; then file+=" amd64.dmg"
		else file+=".exe"
		fi
		
		download "$url" "$(gitKrakenDir)" "$file" || return
	done

	downloadDone "$app" "$v"
}

gitKrakenDir() { echo "git/Git Kraken"; }
gitKrakenVersion() { curl --silent "https://www.gitkraken.com/download" | ${G}grep "release:" | ${G}grep -oP '(?<=release:).*' | cut -d"<" -f1 | RemoveSpaceTrim; }

GitHubInstall()
{
	# https://cli.github.com/manual/installation

	# Debian
	local file="/usr/share/keyrings/githubcli-archive-keyring.gpg"
	if IsPlatform debian && [[ ! -f "$file" || $force ]]; then
		SudoCheck || return
		curl -fsSL "https://cli.github.com/packages/githubcli-archive-keyring.gpg" | sudo dd of="$file" || return
		sudo chmod go+r "$file" || return
		echo "deb [arch=$(dpkg --print-architecture) signed-by=$file] https://cli.github.com/packages stable main" | sudo tee "/etc/apt/sources.list.d/github-cli.list" > /dev/null
		PackageUpdate || return
	fi

	package gh && makeLinkSudo --symbolic "$(FindInPath "gh")" "/usr/local/bin/gh"
} 

GitHubRegister() { ! InPath gh && return; gh auth login && gh auth setup-git; }

GitHubHelp()
{
	echot "\
- GITHUB ENTERPRISE, GitHub Username or Email=IDSID
- Password=NNN
- GitHub Enterprise URL=https://GitHub.intel.com/
- Full Name=NNNN
- tools, options...
	- default storage directory=c:\Projects
	- SCAN FOR REPOSITORIES
- note:
	- GitHib is useful for quickly cloning a repository from GitHub
	- clone a repository - click an account on the left channel, right click on the repository, and select Clone To..."
}


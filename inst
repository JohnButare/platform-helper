DomotzAgentInstall()
{
	# migrate https://community.domotz.com/topic/51-save-or-export-device-data/?tab=comments#comment-95
	# Ubuntu https://snapcraft.io/domotzpro-agent-publicstore	
	header "Domotz Agent" # https://help.domotz.com/monitoring-management/move-domotz-to-new-hardware/

	# snap
	snapCheck || return
	
	# install
	local name="domotzpro-agent-publicstore"
	if ! snap list | grep --quiet '^domotzpro-agent-publicstore'; then
		sudoc snap install "$name" || return
	  sudo snap connect $name:firewall-control || return
	  sudo snap connect $name:network-observe || return
	  sudo snap connect $name:raw-usb || return
	  sudo snap connect $name:shutdown || return
	  sudo snap connect $name:system-observe || return
	fi

	# configure firewall
	InPath ufw && sudo ufw status | grep --quiet " active" && { sudo ufw allow 3000 || return; }

	# configured allowed interface
	local interface; interface="$(GetInterface)" || return
	echo "Checking if '$interface' is the allowed interface..."
	if ! DomotzHelper api network/interfaces-policy | grep --quiet "\"$interface\""; then
		echo "Setting '$interface' to the allowed interface..."
		DomotzHelper api put network/interfaces-policy '{ "policy": "allow", "rules": [ "'$interface'" ] }' || return
	fi

	# configure Hashi - do not control the service (snap.domotzpro-agent-publicstore.domotzpro-agent-publicstore)
	hashiAppNoService "domotz-agent" || return

	# manual configuration
	echo "Click "START MIGRATION..., ..., Resume Agent
	httpShow 3000 || return
}


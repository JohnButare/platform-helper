	if IsPlatform linux; then
		cd "$P/lplinux" || return
		./install_lastpass.sh || return
	elif IsPlatform win; then
		mergeDir "$pp/LastPass" "$oo" || return
		$rm "$pd/My LastPass Vault.lnk" || return

7ZipInstall()
{
	header "7-Zip"

	# debian, mac
	IsPlatform debian && { pkg p7zip-full || return; }
	IsPlatform mac && { pkg p7zip || return; }

	# Windows - http://www.7-zip.org/download.html
	! IsPlatform win && return;
 	local v="22.1.0.0" vPowerShell="22.01" vInstall="2201" file="$P/7-Zip/7z.exe" 
	[[ -f "$file" && "$(AppVersion "$file")" == @($v|$vPowerShell) && ! $force ]] && return
	run "shareware/7-Zip/setup/7z${vInstall}-$(getArch "x64" "arm64").$(getArch "msi" "exe")" || return
}

7ZipFinalWin()
{
	! CanElevate && return
	$cp "$P/7-zip/7-zip.chm" "$PLATFORM_PATH" || return
	$cp "$P/7-zip/7z.exe" "$P/7-zip/7z.dll" "$PLATFORM_PATH" || return
	mergeDir "$pp/7-Zip" "$ao" || return
}

AlfredInstall()
{
	local v; v="$(getVersionCurrent "alfred" )" || return
	run --name="Alfred" "$(alfredDir)/Alfred_$v.dmg" --version="$v" && alfred startup
}

AlfredProfile() { alfred profile restore default; }
AlfredRegister() { register "alfred"; }

AlfredDownload()
{
	local app="alfred"; downloadStart "$app" || return 0
	local v; v="$(getVersionCurrent "$app")" && download "https://cachefly.alfredapp.com/Alfred_$v.dmg" "$(alfredDir)" && downloadDone "$app" "$v"
}

alfredDir() { echo "platform/mac/Alfred/setup"; }

alfredVersion()
{
	local change; change="$(alfredChangeLog |& sgrep -A1 '<h2>Alfred[^\s]*<' | shead -2)" || return
	local version="$(echo "$change" | head -1 | sed 's/.*Alfred //' | cut -d'<' -f1)"
	local build="$(echo "$change" | tail -1 | sed 's/.*Build //' | cut -d',' -f1)"
	echo "${version}_${build}"
}

alfredVersionBeta()
{
	local change; change="$(alfredChangeLog |& sgrep -A1 'Pre-release' | shead -2)" || return 0; # no pre-release version
	local version="$(echo "$change" | head -1 | sed 's/.*Alfred //' | cut -d' ' -f1)"
	local build="$(echo "$change" | tail -1 | sed 's/.*Build //' | cut -d',' -f1)"
	echo "${version}_${build}"
}

alfredChangeLog() { scurl --silent --location "https://www.alfredapp.com/changelog"; }


{
	header "Dashlane"

	# https://www.dashlane.com/download#downloaded
	run "Dashlane/Dashlane/" -p "Inst.exe" ".dmg" || return

	if [[ "$PLATFORM" == "win" ]]; then
		mergeDir "$up/DashLane" "$oo" || return
		$rm "$ud/Dashlane.lnk" || return
	fi

	return 0
}


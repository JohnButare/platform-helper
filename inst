#  hashi - install Hashi program only by decrompressing downloads in install directory and update the program locally
HashiInstall() { i consul nomad vault; }
ConsulInstall() { hashiCli "consul"; }
NomadInstall() { hashiCli "nomad"; }
VaultInstall() { hashiCli "vault"; }

# hashiCli consul|nomad|vaault - install a Hashi program, certificates, and other setup necessary to run Hashi tools on the command line as clients
hashiCli() 
{
	local what="$1"
	header "${what^}"

	# check version
	if [[ ! $force ]] && InPath "$what"; then
		local installedVersion; installedVersion="$(hashiInstalledVersion "$what")" || return
		local latestVersion; latestVersion="$(getVersionCurrent "$what")" || return
		log1 "install $what: installedVersion=$installedVersion latestVersion=$latestVersion"
		! versionCheck "$what" "$installedVersion" "$latestVersion" && return
	fi

	# update the program if it is already installed, or run the full CLI install
	if [[ ! $force ]] && InPath "$what"; then
		run --no-header --executable --no-install-check "$(hashiDir "$what")"
	else
		RunLog hashi install cli "$what" --encrypt "${globalArgs[@]}" "${otherArgs[@]}"
	fi
}

HashiDownload() { i ConsulDownload NomadDownload VaultDownload; }
ConsulDownload() { hashiDownload "consul"; } 	# https://www.consul.io/downloads.html
NomadDownload() { hashiDownload "nomad"; }		# https://www.nomadproject.io/downloads
VaultDownload() { hashiDownload "vault"; }		# https://www.vaultproject.io/downloads

hashiDownload()
{
	local app="$1"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local url; url="$(hashiUrl "$app")" || return
	local prefix="$url/$v/${app}_${v}"
	local suffix suffixes=("darwin_amd64" "darwin_arm64" "linux_amd64" "linux_arm" "linux_arm64" "windows_amd64")
	
	for suffix in "${suffixes[@]}"; do
		local url="${prefix}_${suffix}.zip"
		local file="$(GetFileNameWithoutExtension "$url")"
		download "$url" "$(hashiDir "$app")" "${file}.zip" || return
	done

	extractFiles && downloadDone "$app" "$v"
}

consulDir() { hashiDir "consul"; }
nomadDir() { hashiDir "nomad"; }
vaultDir() { hashiDir "vault"; }
hashiDir() { echo "other/HashiCorp/$1"; }

consulVersion() { hashiVersion "consul"; }
nomadVersion() { hashiVersion "nomad"; }
vaultVersion() { hashiVersion "vault"; }

hashiVersion()
{
	local what="$1" url; url="$(hashiUrl "$what")" || return
	scurl --silent "$url" | sgrep "$what" | sgrep -v "+ent" | sgrep -v -E "-beta|-rc" | shead -1 | cut -d">" -f2 | cut -d"<" -f1 | cut -d"_" -f2; 
}

# Hashi Server - install Hashi server on the specified servers, set servers explicitly for safety
HashiServerInstall() { i ConsulServer NomadServer VaultServer; }
ConsulServerInstall() { ScriptOptHostVerify; ForAllHosts hashiServerConsul; }
NomadServerInstall() { ScriptOptHostVerify; ForAllHosts hashiServerNomad; }
VaultServerInstall() { ScriptOptHostVerify; ForAllHosts hashiServerVault; }

hashiServerConsul() { local host="$1"; hashiServer "consul" "$host" && sshRunInteractive "$host" "inst ConsulDocker"; }
hashiServerNomad() { local host="$1"; hashiServer "nomad" "$host"; }
hashiServerVault() { local host="$1"; hashiServer "vault" "$host"; }
hashiServer() { local what="$1" host="$2"; header "${what^} Server ($host)"; RunLog hashi install service "$what" --host="$host" --encrypt "${globalArgs[@]}" "${otherArgs[@]}"; }

# hashi update - update locally, update a test server, then update all servers
HashiUpdateInstall() { i hashi && i HashiServerUpdate -H=pi3 && pause "Check status..." && i HashiServerUpdate; }

# Hashi Server Update - extract new executables and install them on the specified servers
HashiServerUpdateInstall() { ForAllHosts hashiServerUpdate all; }
ConsulServerUpdateInstall() { ForAllHosts hashiServerUpdate consul; }
NomadServerUpdateInstall() { ForAllHosts hashiServerUpdate nomad; }
VaultServerUpdateInstall() { ForAllHosts hashiServerUpdate vault; }

hashiServerUpdate() { local what="$1" host="$2"; command hashi update service program $what --host="$host" --encrypt "${globalArgs[@]}" "${otherArgs[@]}"; }

# helper

hashiUrl() { echo "https://releases.hashicorp.com/$1"; }
hashiInstalledVersion() { InPath "$1" && "$1" --version | shead -1 | cut -d" " -f2 | cut -d"v" -f2; }


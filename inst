{
	local v; v="$(getVersionCurrent "1Password")" || return
	run --name "1Password" "$(1PasswordDir)/1Password-win v$v.$(getElevate "msi" "exe")|1Password-mac v$v.zip|1Password-linux v$v.deb" --version=$v --elevate || return

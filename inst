SublimeMergeInstall()
{
	header "Sublime Merge"	
	local args=() v="$(getVersionCurrent "SublimeMerge")" || return
	! CanElevate && args+=(--dest "$PUSER/Sublime Merge")
	run "other/Sublime/merge/sublime_merge_build_${v}_x64$(getElevate "_setup.exe" ".zip")|sublime_merge_build_${v}_mac.zip|sublime-merge_build_${v}_$(getArch "amd64" "arm64").deb" --copy-local-win --version "$v" "${args[@]}" || return;
}

SublimeMergeFinalWin()
{
	if ! CanElevate; then
		$makeShortcut "$PUSER/Sublime Merge/sublime_merge.exe" "$up/Applications/Sublime Merge" || return
		gitFixWin "$PUSER/Sublime Merge/Git/cmd/git.exe" || return
		return
	fi

	$mv "$pp/Sublime Merge.lnk" "$pp/Applications" || return
	gitFixWin "$P/Sublime Merge/Git/cmd/git.exe" "" "elevate"; 
}

SublimeMergeProfile() { SublimeMerge $noPrompt profile restore default; }
SublimeMergeRegister() { register "SublimeMerge"; }


SublimeMergeDownload()
{
	local app="SublimeMerge"; downloadStart "$app" || return 0	
	local dir="other/Sublime/merge"
	local v; v="$(getVersionCurrent "SublimeMerge")" || return
	local baseUrl="https://download.sublimetext.com/sublime_merge_build_${v}_"	
	local baseUrlDeb="https://download.sublimetext.com/sublime-merge_build-${v}_"
	local suffix suffixes=("arm64.deb" "mac.zip" "x64_setup.exe" "x64.zip" "amd64.deb")

	for suffix in "${suffixes[@]}"; do
		local url="$baseUrl$suffix"; [[ "$url" =~ .deb$ ]] && url="$baseUrlDeb$suffix"
		download "$url" "$(sublimeMergeDir)" || return
	done

	downloadDone "$app" "$v"
}

sublimeMergeDir() { echo "other/Sublime/merge"; }
sublimeMergeVersion() { curl --silent --location "https://www.sublimemerge.com/download" | grep "Version" | sed 's/.*Build //' | cut -d"<" -f1; }


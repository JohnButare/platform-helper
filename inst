# gitFixWin GIT_PROGRAM [elevate] - file permissions does not work for Windows git programs
gitFixWin()
{
	local git="$1"
	[[ ! -f "$1" ]] && return
	$(LowerCase "$2") "$git" config --system core.filemode false
}


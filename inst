HostnameInstall()
{	
	# Docker hostname must be set in the containers config.vs.json
	IsDocker && return
	
	# return if needed
	[[ ! $force ]] && ! UpdateNeeded "install-hostname" && return

	header "Hostname"

	os name set # use return values
	case $? in

		# name changed
		0) 
			UpdateDone "install-hostname" || return
			rebootNeeded="true"
			hostname="$(UpdateGet "hostname")" || return
			;;

		# name unchanged
		1) UpdateDone "install-hostname"; return;;

		# error
		*) return 1;;

	esac
}


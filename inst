1PasswordFinalWin()
{
	$mv "$up/1Password.lnk" "$up/Applications" || return
	mergeDir "$pp/1Password" "$pp/Applications/Other" || return
	registryDo 32 delete "urun/1Password" || return	# "C:\Users\jjbutare\AppData\Local\1Password\app\8\1Password.exe" --silent
}

1PasswordDownload()
{
	local app="1Password"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return	

	local item items=("mac/1Password.zip" "win/1PasswordSetup-latest.msi" "win/1PasswordSetup-latest.exe" "linux/debian/amd64/stable/1password-latest.deb")
	[[ "$installType" == "beta" ]] && items=("mac/1Password%20Beta.zip" "win/1PasswordSetup-latest.BETA.msi")

	for item in "${items[@]}"; do
		download "https://downloads.1password.com/$item" "$(1PasswordDir)" "1Password-$(RemoveAfter "$item" "/") v$v.$(GetFileExtension "$item")" || return
	done

	downloadDone "$app" "$v"
}

1PasswordDir() { echo "other/1Password/setup"; }
1PasswordVersion() { curl --silent "https://releases.1password.com/mac/" | tr -d '\n' | sed 's/u-flexgrow u-text-left/\n/g' | ${G}grep -A 1 "Updated to" | grep -v "href=/mac/beta" | head -1 | cut -d" " -f3; }
1PasswordVersionBeta() { curl --silent "https://releases.1password.com/mac/" | tr -d '\n' | sed 's/u-flexgrow u-text-left/\n/g' | ${G}grep -A 1 "Updated to" | grep "href=/mac/beta" | head -1 | cut -d" " -f3; }

1PasswordCliInstall()
{
	local v; v="$(getVersionCurrent "1PasswordCli")" || return

	if IsPlatform mac; then
		run --name "op" "$(1PasswordCliDir)/op_apple_universal_v$v.pkg" --version=$v || return
	else
		run --name "op" --executable "other/1Password/cli" --version=$v || return
	fi
}

1PasswordCliDownload()
{
	local app="1PasswordCli"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return	

	local item items=("op_apple_universal_v$v.pkg" "op_linux_amd64_v$v.zip" "op_linux_arm64_v$v.zip" "op_windows_amd64_v$v.zip")

	for item in "${items[@]}"; do
		download "https://cache.agilebits.com/dist/1P/op2/pkg/v$v/$item" "$(1PasswordCliDir)" || return
	done

	extractFiles && downloadDone "$app" "$v"
}

1PasswordCliDir() { echo "other/1Password/cli"; }
1PasswordCliVersion() { scurl --silent "https://app-updates.agilebits.com/product_history/CLI2" | sgrep build | grep -v beta | shead -1 | sed 's/.*title="//' | cut -d" " -f1; }


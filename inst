FirefoxInstall()
{
	header "Firefox"

	# check version
	local v; v="$(getVersionCurrent "firefox")" || return
	PackageIsInstalled "firefox.*" && return # don't update here if Firefox is installed from a package
	! versionCheckApp "firefox" "$v" && return

	# install
	local ext="msi"; { IsPlatform arm || ! CanElevate; } && ext="exe"
	local p="$(firefoxDir)/Firefox Setup $v $(getArch "ia64" "arm64").$ext|Firefox Setup $v.dmg"
	[[ "$NETWORK_DOMAIN" == "coexist" ]] && p="shareware/PortableApps/FirefoxPortable_116.0_English.paf.exe"
	if IsPlatform mac,win; then force="--force" run --name "Firefox" "$p" --dest="firefox" --elevate --no-header || return
	elif IsPlatform debian; then pkg firefox-esr || return
	fi
}

FirefoxFinalMac() { dockutil --find "Firefox" >& /dev/null && return; dockutil --add "/Applications/Firefox.app"; }
FirefoxProfile() { firefox $noPrompt profile restore default; }
FirefoxRegister() { register "firefox"; }

FirefoxFinalWin()
{
	local dest="$pp/Applications"; ! CanElevate && dest="$up/Applications"
	{ $mv "$up/Firefox.lnk" "$dest" && $mv "$up/Firefox Private Browsing.lnk" "$dest"; } || return
	! CanElevate && return; $mv "$pp/Firefox.lnk" "$dest" && $mv "$pp/Firefox Private Browsing.lnk" "$dest" && $rm "$pd/Firefox.lnk"
}

FirefoxDownload()
{
	local app="firefox"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local baseUrl="https://download.mozilla.org/?lang=en-US&product=firefox-latest-ssl&os="
	local item items=("linux64:tar.bz2" "msi:msi: ia64" "osx:dmg:" "win64:exe: ia64" "win64-aarch64:exe: arm64")

	for item in "${items[@]}"; do
		StringToArray "$item" ":" item
		local suffix="${item[0]}" ext="${item[1]}" arch="${item[2]}"
		local downloadUrl="$baseUrl$suffix"; [[ "$suffix" == "msi" ]] && downloadUrl="https://download.mozilla.org/?product=firefox-msi-latest-ssl&os=win64&lang=en-US"
		local url="$(curl --silent --header --location "$downloadUrl" | cut -d"\"" -f2)" || { ScriptErr "unable to get the Firefox download URL from '$downloadUrl'"; return 1; }
		local file="Firefox Setup ${v}${arch}.${ext}"
		download "$url" "$(firefoxDir)" "$file" || return
	done

	downloadDone "$app" "$v"
}

firefoxDir() { echo "other/Mozilla/Firefox"; }
firefoxVersion() { scurl --silent --location "http://www.mozilla.org/en-US/firefox/notes" | sgrep "Firefox " | shead -1 | tr -s " " | cut -d" " -f3 | cut -d"," -f1; }


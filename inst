	local v="12.4"; local p="FreeFileSync_$v_[Donation_Edition]"
	run --name "FreeFileSync" "install/shareware/FreeFileSync/${p}_Setup.exe|${p}.pkg|${p}_Install.run" --version=$v || return
}

GitAnnexInstall()
{
	local share="/usr/share"
	if IsPlatform mac; then
		package git-annex; return
	fi

	# initialize
	sudov || return

	# find install file
	findFile "shareware/git-annex/image" || return
	command cd "$file" || return

	# find the correct file for this machine
	local exe; exe="$(findExecutable "git-annex" "$PWD")" || return

	# bin
	local dir="/usr/bin"
	sudo install "$exe" "$dir/git-annex" || return
	sudo ln -sf "git-annex" "$dir/git-annex-shell" || return
	sudo ln -sf "git-annex" "$dir/git-remote-tor-annex" || return

	# doc
	local dir="/usr/share/doc/git-annex"
	sudo install -d "$dir" || return
	sudo rsync -a --delete "html/" "$dir/html/" || return

	# man
	local dir="$share/man/man1"
	sudo install -d "$dir" || return
	sudo install -m 0644 man/*.1 "$dir" || return

	# completion
	local dir="$share/bash-completion/completions"
	sudo install -d "$dir" || return
	sudo install -m 0644 "bash-completion.bash" "$dir/git-annex"

 	local dir="$share/zsh/site-functions"
 	sudo install -d "$dir" || return
	git-annex --zsh-completion-script git-annex 2> "/dev/null" | sudo tee "$dir/_git-annex" || return
	
	local dir="$share/fish/vendor_completions.d"
	sudo install -d "$dir" || return
	git-annex --fish-completion-script git-annex 2> "/dev/null" | sudo tee "$dir/git-annex.fish" || return

	runCheck="true"
}

GitAnnexProfile() { GitAnnexHelper $noPrompt profile restore default; }


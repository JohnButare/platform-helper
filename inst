	local p="$1" name="$2" dest="$3"; shift 3
	yarnCheck || return

	local dir="$CODE/$p"
	[[ ! $force && -d "$dir" ]] && return
	makeDir "$dir" || return
	pushd "$dir" >& /dev/null || return
	yarn create "$p" "$@" || return
}

# run helper

runAppImage()
{
	local p="$1"; shift
	local appName="$(GetFileNameWithoutExtension "$p")"
	local app="$P/$(GetFileName "$p")"

	if [[ -f "$app" ]] && ask "Do you want to delete the existing installation in \"$appName\"" -dr n; then
		rmSudo "$app" || return
	fi

	if [[ ! -f "$app" ]]; then
		echo "Installing....$app"
		sudo pcp "$p" "$P" || { cat ~/.gcp/journal; return; }
	fi

	sudo chmod ugo+x "$app" || return

	echo "Configuring $appName..."
	start "$app" || return

	pause="--pause"
	return 0
}

runCopyLocal()
{
	p="$(copyLocal "$p")" || return

	if [[ $rename ]]; then
		local newP="$(mktemp --tmpdir="$(PlatformTmp)" --suffix ".$(GetFileExtension "$p")")"
		mv "$p" "$newP" || return
		p="$newP"
	fi

	return 0
}

# runDeb - install a program from a Debian archive file
# - if forcePrompt is set, gdebi will run in interactive mode.  This is for packages which 
#   require interaction.
runDeb()
{
	local p="$1"; shift

	hilight "Installing $(GetFileName "$p") version $(PackageFileVersion "$p")..."

	# install with gdebi for dependencies
	! InPath gdebi && { pkg gdebi || return; }
	local args=(); [[ ! $forcePrompt ]] && args+=(--non-interactive)
	sudo gdebi "${args[@]}" "$p" "$@"
}

runDmg()
{
	local result volume="/Volumes/install"

	runDmgWorker "$@"; result=$?

	if ! hdiutil detach "$volume" -quiet && ! hdiutil detach "$volume"; then
		ask "Do you want to forcibly detach '$volume'" || return 
		! hdiutil detach -force "$volume" && { sudoc umount "$volume" || return; }
	fi

	return $result
}

# runDmgWorker PROGRAM NAME
runDmgWorker()
{
	local p="$1" name="$2" dest="$3"; shift 2
	local appDir="$dest/${name}.app"

	if ! hdiutil mount "$p" -mountpoint "$volume" -quiet; then
		ScriptErr "unable to mount '$p'"
		return 1
	fi

	if p="$volume/Install.mpkg" && [[ -f "$p" ]]; then
		log1 "running installer '$p'..."
		sudoc installer $verboseInstaller -pkg "$volume/Install.mpkg" -target "/Applications"

	elif p="$volume/Install.app" && [[ -d "$p" ]]; then
		log1 "running installer '$p'..."
		start "$p"
		pause

	elif ls "$volume/"*.pkg >& /dev/null; then		
		shopt -s nullglob; p=("$volume/"*.pkg); shopt -s nullglob

		if [[ $useGui ]]; then
			log1 "running installer '$p'..."
			open "$p" || return
		else
			log1 "running installer '$p' silently..."
			sudoc installer $verboseInstaller -pkg "$p" -target "/Applications"
		fi

	elif ls "$volume/"*.app >& /dev/null; then
		shopt -s nullglob; p=("$volume/"*.app); shopt -u nullglob

		# installer
		if [[ $installer ]]; then
			open "$p" && runPause; return
		fi

		# copy application
		log1 "copying application '$p'..."
	
		appDir="$P/$(GetFileName "$p")" || return
		appClean "$name" "$appDir" || return
		sudoc acp --recursive --progress-bar "$p" "$P" || return

	else
		ScriptErr "'$volume' does not contain an installer or an application"
		return 1

	fi

	echo "Updating Spotlight..."
	mdimport "$appDir" || return
}

runIso()
{
	local p="$1"

	iso mount "$p" || return

	if IsPlatform win && cmd.exe /c dir 'd:\setup.exe' >& /dev/null; then
		elevate cmd.exe /c 'd:\setup.exe' || return
	else
		pause "Run the setup program..."
	fi

	iso dismount "$p" || return
}

# runProgramDescription PROGRAM [NAME] - get program description
runProgramDescription()
{
	local desc p="$1" name="$2"
	local desc parts

	# get description based off of the program path
	if [[ $p ]]; then
		StringToArray "$p" "/" parts
		desc="$(IFS=/; echo "${parts[*]: -3}")"
		[[ ! $desc ]] && desc="$p"
		echo "$desc"
		return
	fi

	# use the program name as the description if passed
	[[ $name ]] && { echo "$name"; return; }

	echo "the setup"
}

# runPrompt PROGRAM [NAME] - prompt to run a program
runPrompt()
{
	local name="$(runProgramDescription "$1" "$2")"

	runCheck="true"
	if [[ $noPrompt ]]; then
		hilight "Running $name..."
	else
		ask "Do you want to run $name"
	fi
}

runXip()
{
	local p="$1" name="$2"; shift 2
	! InPath unxip && { package "unxip" || return; }
	appClean "$name" "$P/${name}.app" && echo "Installing '$name'..." && sudoc unxip "$p" "$dest"
}

# versionCheckApp APP CHECK - return true if install is needed (the installed version is older than check version)
versionCheckApp()
{
	# arguments
	local app check

	while (( $# != 0 )); do
		case "$1" in "") : ;;
			*)
				! IsOption "$1" && [[ ! $app ]] && { app="$1"; shift; continue; }
				! IsOption "$1" && [[ ! $check ]] && { check="$1"; shift; continue; }
				UnknownOption "$1" "versionCheckApp"; return
		esac
		shift
	done

	[[ ! $app ]] && { MissingOperand "app" "versionCheckApp"; }
	[[ ! $check ]] && { MissingOperand "check" "versionCheckApp"; }

	# if the application is not installed install is needed 
	! appIsInstalled "$app" && return

	# get the installed version
	local installedVersion; installedVersion="$(AppVersion --allow-alpha $alternate "$(echo "$app" | sed 's/ //g')")" || ScriptExit

	# check the version
	versionCheck "$app" "$installedVersion" "$check"
}

# versionCheck APP INSTALLED_VERSION CHECK_VERSION - return true if install is needed (the installed version is older than check version)
versionCheck()
{
	local app="$1" installed="$2" check="$3"
	[[ ! $app ]] && { MissingOperand "app" "versionCheck"; }
	[[ ! $installed ]] && { MissingOperand "installed" "versionCheck"; }
	[[ ! $check ]] && { MissingOperand "check" "versionCheck"; }

	# install is forced
	[[ $force ]] && return 0

	# logging
	log1 "installed=$installed"
	log1 "new=$check"
	
	# return false if the installed version is the same as the version we are checking
	[[ "$installed" == "$check" ]] && return 1

	# return false and display an error if the installed version is newer than the version we are checking
	if versionIsNewer "$installed" "$check"; then
		ScriptErrQuiet "the installed version of ${app^} ($installed) is newer than the version to install ($check)"
		return 1
	fi

	# check if older
	versionIsOlder "$installed" "$check"
}

# versionIsEqual|Newer|Older V1 V2 - return true if V1 is equal|newer|older than V2
versionIsEqual() { [[ "$1" == "$2" ]]; }
versionIsNewer() { local v1="$(versionRemoveBuild "$1")" v2="$(versionRemoveBuild "$2")"; ! versionIsEqual "$v1" "$v2" && [[ "$(echo -e "$v1\n$v2" | sort -V | head -1)" == "$v2" ]]; }
versionIsOlder() { local v1="$1" v2="$2"; ! versionIsEqual "$v1" "$v2" && ! versionIsNewer "$v1" "$v2"; }
versionRemoveBuild() { local version="$1"; [[ "$version" =~ _ ]] && GetWord "$version" 1 _ || printf "$version"; } # versionRemoveBuild VERSION - assume part after _ is the build (Alfred), remove for proper comparison


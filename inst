PassInstall()
{
	header "pass"
	i --no-header gpg || return
	pkg pass || return;

	if [[ ! -d "$HOME/.password-store" ]]; then
		local id; id="$(gpg --list-keys | head -4 | tail -1 | RemoveSpace)" || return
		pass init "$id" || return
		credential test set --manager=pass || return
	fi
}

pGinaInstall()

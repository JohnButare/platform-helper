betterDisplayDir() { echo "platform/mac/BetterDisplay"; }
betterDisplayVersion() { scurl --silent --location "https://github.com/waydabber/BetterDisplay/releases" | sgrep '<h2' | sgrep '>v' | sgrep '<h' | sgrep -v "pre-release" | shead -1 | sed 's/.*>v//' | cut -d'<' -f1 | cut -d"-" -f1; }


MariaDb11Install() { local version=11.0 MariaDbInstall; }
MariaDb10Install() { local version=10.11 MariaDbInstall; }

MariaDbInstall()
{
	header "MariaDB" # https://mariadb.org/download/?t=mariadb&p=mariadb&r=11.1.0&os=windows&cpu=x86_64&pkg=msi&m=gigenet

	local wasInstalled; PackageInstalled mariadb-server && wasInstalled="true"

	# add sources if needed
	local file="/etc/apt/sources.list.d/100-mariadb.list"
	if [[ $version && ($force || ! -f "$file") ]]; then
		echo "deb https://mirrors.gigenet.com/mariadb/repo/$version/ubuntu $(os codename) main" | sudoc ${G}tee "$file" || return
		sudo wget -O "/etc/apt/trusted.gpg.d/mariadb_release_signing_key.asc" "https://mariadb.org/mariadb_release_signing_key.asc" || return
		PackageUpdate || return
	fi

	# install package
	pkg mariadb-server || return

	# secure installation
	[[ ! $wasInstalled ]] && { sudo mariadb_secure_installation || return; }

	# update network insterface configuration
	if ask 'Bind to all network interfaces'; then
		sudo sed -i "s/^bind-address\s*=\s127.0.0.1/bind-address		= 0.0.0.0/" "/etc/mysql/mariadb.conf.d/50-server.cnf" || return
		service restart mariadb || return
	fi

	return 0
}

Mysql8Install() { local version=8.0.22 MySqlInstall; }

MySqlInstall()
{
	header "MySQL" # https://dev.mysql.com/downloads/mysql/

	local wasInstalled; PackageInstalled mysql-server && wasInstalled="true"

	# install
	if [[ $version ]]; then
		run "shareware/MySql/setup/mysql-community-server_${version}-1ubuntu20.04_amd64.deb" || return
	elif ! PackageInstalled mysql-server; then
		pkg mysql-server || return
	fi

	# secure installation
	[[ ! $wasInstalled ]] && { sudo mysql_secure_installation || return; }

	# update network insterface configuration
	if ask 'Bind to all network interfaces'; then
		sudo sed -i "s/^bind-address\s*=\s127.0.0.1/bind-address		= 0.0.0.0/" "/etc/mysql/mysql.conf.d/mysqld.cnf" || return
		service restart mysql || return
	fi

	return 0
}


	fi

	echo "Updating icons..."
	$makeDir "$pp/Development/Other/Git" || return
	$mv "$pp/Git Extensions.lnk" "$pp/Development/Other/Git" || return
	$rm "$pd/Git Extensions.lnk" || return

	GitHelper profile restore default || return
}


SlackInstall()
{
	local v; v="$(getVersionCurrent "slack")" || return
	local arch="$(getPlatform "x64" "universal" "x64")"
	local ext="$(getPlatform "$(getElevate "msi" "exe")" "dmg" "deb")"
	run --name="Slack" "$(slackDir)/slack-$v-$arch.$ext" --version="$v"
}	

SlackFinalWin() {	mergeDir "$up/Slack Technologies Inc" "$up/Applications/Other" && $rm "$ud/Slack.lnk" && registry 32 delete "urun/com.squirrel.slack.slack"; }

SlackDownload()
{
	local app="slack"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local prefix="https://downloads.slack-edge.com/releases"
	local item items=("linux/$v/prod/x64/slack-desktop-$v-amd64.deb:x64:deb" "macos/$v/prod/universal/Slack-$v-macOS.dmg:universal:dmg" "windows/$v/prod/x64/slack-standalone-$v.0.msi:x64:msi" "windows/$v/prod/x64/SlackSetup.exe:x64:exe")
	
	for item in "${items[@]}"; do
		StringToArray "$item" ":" item
		local urlSuffix="${item[0]}" architecture="${item[1]}" fileSuffix="${item[2]}"
		download "${prefix}/${urlSuffix}" "$(slackDir)" "slack-$v-$architecture.$fileSuffix" || return
	done

	downloadDone "$app" "$v"
}

slackDir() { echo "other/Slack"; }
slackVersion() { curl --silent --location "https://slack.com/downloads/mac" | sgrep "Version " | sed 's/.*Version //' | cut -d'<' -f1; }


#################################################
# Package Management
#################################################

PackageManagementAllInstall() { i apt AptSrc AptUtilities asdf chocolatey flatpak homebrew nala PortableApps snap SnapStore WinGet; }
snapCheck() { InPath snap && return; i --no-header snap; }
SnapInstall() { pkg snapd; }
SnapStoreInstall() { run --name "Snap Store" --snap "snap-store"; }

AptInstall()
{
	local codeName; codeName="$(os CodeName)" || return

	# add universe sources
	if IsPlatform ubuntu && ! IsPlatform rock && ! grep "$codeName universe" "/etc/apt/sources.list" |& grep -v "^#" >& /dev/null; then
		echo "deb http://us.archive.ubuntu.com/ubuntu/ $codeName universe" | sudo ${G}tee -a "/etc/apt/sources.list" || return
		PackageUpdate || return
	fi

	# enable unattended upgrades
	if ! service --quiet exists unattended-upgrades; then
		package unattended-upgrades || return
	fi

	return 0
}

AptSrcInstall()
{
	local file="/etc/apt/sources.list"

	# return if deb-src present
	[[ ! $force ]] && ${G}grep --quiet "^deb-src" "$file" && return

	# first uncomment deb-src lines
	sudoc sed -i.bak 's/^# *deb-src/deb-src/g' "$file" || return

	# ensure the deb-src distribution matches the deb distribution - seen on WSL
 	local deb; deb="$(grep "^deb " "$file" | head -1 | cut -d" " -f3)" || return
 	local debSrc; debSrc="$(grep "^deb-src " "$file" | head -1 | cut -d" " -f3)" || return
	[[ "$deb" != "$debSrc" ]] && { sudoc sed -i "s/ $debSrc/ $deb/g" "$file" || return; }
	
	# duplicate deb sources if none are present - seen on Rock5
	! ${G}grep --quiet "^deb-src" "$file" && { ${G}grep "^deb " "$file" | sed 's/^deb /deb-src /g' | sudo tee --append "$file" || return; }

	# update
	sudoc apt-get update || return

	return 0
}

AptUtilitiesInstall() # 70MB
{
	header "APT Utilities"

	# check if installed
	InPath wajig && [[ ! $force ]] && return

	# install
	pkg apt-transport-https ca-certificates curl gnupg-agent || return
	pkg apt-file apt-show-versions deborphan debsums software-properties-common wajig || return

	# configure
	sudoc apt-file update || return
}

AsdfInstall()
{
	header "asdf" # https://asdf-vm.com/

	# dependencies
	package curl git gnupg || return

	# install asdf
	local v="v0.8.1"
	if ! [[ -d "$HOME/.asdf" ]]; then
		git clone "https://github.com/asdf-vm/asdf.git" "$HOME/.asdf" --branch "$v" || return
	fi

	# configuration
	[[ -f "$UBIN/.asdfrc" ]] && { MakeLink --symbolic --hide "$UBIN/.asdfrc" "$HOME/.asdfrc" || return; }

	# initialize
	. "$HOME/.asdf/asdf.sh" || return
}

ChocolateyInstall()
{
	header "Chocolatey"

	# installs: user environment path=c:\Chocolatey\bin, ChocolateyInstall=c:\Chocolatey
	start --elevate --wait cmd /c powershell -NoProfile -ExecutionPolicy unrestricted -Command "Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))" "&&" pause
}

FlatpakInstall() { package flatpak && sudo flatpak remote-add --if-not-exists flathub "https://flathub.org/repo/flathub.flatpakrepo"; }

homebrewCheck() { homebrewInstalled && return 0; i --no-header homebrew || return; }
homebrewInstalled() { [[ -f "$(homebrewDir)/bin/brew" ]]; }

homebrewDir() 
{
	if IsPlatformAll mac,x86; then echo "/usr/local/bin/brew"; 
	elif IsPlatformAll mac,arm; then echo "/opt/homebrew/bin/brew"
	elif IsPlatformAll debian,x86; then echo "/home/linuxbrew/.linuxbrew"
	fi
}

HomebrewInstall()
{
	header "Homebrew"
	homebrewInstalled && [[ ! $force ]] && return
	IsPlatform debian &&  { curl -fsSL "https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh" | bash; return; }
	eval "$("$(homebrewDir)" shellenv)"
}

NalaInstall()
{
	header "nala"

	InPath nala && [[ ! $force ]] && return

	# determine if we should use legacy nala - https://gitlab.com/volian/nala/-/issues/72
	local useLegacy
	IsPlatform ubuntu && (( $(echo "$(os release) < 22.04" | bc -l) )) && useLegacy="true"
	IsPlatform CasaOs,DebianBase && (( $(echo "$(os release) < 12" | bc -l) )) && useLegacy="true"

	# install
	if [[ $useLegacy ]]; then
		run "shareware/Nala/nala-legacy_0.11.0_amd64.deb" || return
	else
		package nala
	fi

	# sources
	[[ ! $force && -f "/etc/apt/sources.list.d/nala-sources.list" ]] && return
	sudoc nala fetch --auto --fetches 1 --country US || return
}

WinGetInstall() { run --name "winget" --store "9nblggh4nns1"; }


ObsidianDownload()
{
	local app="obsidian"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local suffix suffixes=( "Obsidian.$v.exe" "Obsidian.$v-arm64.exe" "Obsidian-$v-universal.dmg" "obsidian_${v}_amd64.deb" )

	for suffix in "${suffixes[@]}"; do
		download "https://github.com/obsidianmd/obsidian-releases/releases/download/v$v/$suffix" "$(obsidianDir)" && downloadDone "$app" "$v"
	done

	downloadDone "$app" "$v"
}

obsidianDir() { echo "shareware/Obsidian"; }
obsidianVersion() {	scurl --silent "https://github.com/obsidianmd/obsidian-releases/releases" | sgrep "/obsidianmd/obsidian-releases/tree" | shead -1 | sed 's/.*tree\/v//' | cut -d"\"" -f1; }

SublimeInstall()
{
	header "Sublime Text Editor"	

	# check version
	local v; v="$(getVersionCurrent "sublime")" || return
	sublime $alternate IsInstalled && ! versionCheck "sublime" "$(sublime $alternate version)" "$v" && return

	# install	
	IsPlatform linux && [[ ! $installType ]] && installType="package" # Linux defaults to package
	if [[ "$installType" == @(|beta|local) ]]; then
		local args=(); IsPlatform win && CanElevate && args+=('/VERYSILENT' '/TASKS="contextentry"')
		run "$(sublimeDir)/sublime_text_build_${v}_x64_setup.exe|sublime_text_build_${v}_mac.zip|sublime-text_build-${v}_$(getArch "amd64" "arm64").deb" --copy-local-win --elevate -- "${args[@]}" || return
	elif IsPlatform debian && [[ "$installType" == @(|alternate|package) ]]; then sublimePackage || return
	else couldNotLocate
	fi
}

sublimePackage()
{
	# add package source - https://www.sublimetext.com/docs/linux_repositories.html
	if [[ ! -f "/etc/apt/sources.list.d/sublime-text.list" ]]; then
		wget -qO - https://download.sublimetext.com/sublimehq-pub.gpg | sudo apt-key add - || return
  	echo "deb https://download.sublimetext.com/ apt/stable/" | sudo ${G}tee /etc/apt/sources.list.d/sublime-text.list || return
  	PackageUpdate || return
	fi

	# install package
	run --package sublime-text --no-header || return
}

SublimeProfile() { sublime $noPrompt profile restore default && SetTextEditor; }
SublimeRegister() { register "sublime"; }
SublimeFinalMac() { makeLinkSudo "$P/Sublime Text.app/Contents/SharedSupport/bin/subl" "/usr/local/bin/subl"; }

SublimeFinalWin()
{
	if ! CanElevate; then
		[[ -f "$UADATA/Sublime Text/subl.exe" ]] && { "$up/Applications/Sublime Text" || return; }
		return
	fi

	registry delete "HKEY_CLASSES_ROOT/Applications/sublime_text.exe/" # enable Windows Open With
	$mv "$pp/Sublime Text.lnk" "$pp/Applications" || return
}

SublimeDownload()
{
	local app="sublime"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local baseUrl="https://download.sublimetext.com/sublime_text_build_${v}_"
	local baseUrlDeb="https://download.sublimetext.com/sublime-text_build-${v}_"
	local suffix suffixes=("arm64.deb" "mac.zip" "x64_setup.exe" "x64.zip" "amd64.deb")

	for suffix in "${suffixes[@]}"; do
		local url="$baseUrl$suffix"; [[ "$url" =~ .deb$ ]] && url="$baseUrlDeb$suffix"
		download "$url" "$(sublimeDir)" || return
	done

	downloadDone "$app" "$v"
}

sublimeDir() { echo "other/Sublime/setup"; }
sublimeVersion() { curl --silent --location "https://www.sublimetext.com/download" | grep "Version" | ${G}grep -oP '(?=Build ).*' | cut -d" " -f2 | cut -d"<" -f1; }

VisualStudioCodeInstall()
{
	header "Visual Studio Code"

	# install
	local v; v="$(getVersionCurrent "VisualStudioCode")" || return
	local args=(); IsPlatform mac && args+=(--dest "$HOME/Applications")
	run --no-header --name="VisualStudioCode" "$(visualStudioCodeDir)/VSCodeUserSetup-$(getArch "x64" "arm64")-$v.exe|VSCode-darwin-universal-$v.zip|code_$v_$(getArch "amd64" "arm64" "armhf").deb" "${args[@]}" --version=$v --copy-local-win || return

	# SSH Agent
	if IsPlatform win && ! service running ssh-agent; then		
		if CanElevate; then
			serviceAutoStart ssh-agent || return
		else
			service ui || return
			pause "Enable and start the OpenSSH Authetnication Agent, then press any key to continue..."
		fi
		SshHelper config sync win || return
		ssh-add.exe
	fi

	# Python
	i PythonFinal || return	
}

VisualStudioCodeFinalWin() 
{
	mergeDir "$up/Visual Studio Code" "$up/Development/other" || return
	$hide "$WIN_HOME/.vscode" || return	

	CanElevate && return

	mergeDir "$pp/Visual Studio Code" "$pp/Development/other" || return
}

VisualStudioCodeDownload()
{
	local app="VisualStudioCode"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local oss=("darwin-universal" "linux-deb-arm64" "linux-deb-x64" "win32-x64-user" "win32-x64" "win32-arm64-user" "win32-arm64")

	for os in "${oss[@]}"; do
		local url="$(visualStudioCodeUrl "$os")"
		local file; file="$(curl --silent -H -L "$url" |& grep "Found." | GetFileName)" || { ScriptErr "unable to download '$url'"; return 1; }
		[[ "$file" =~ .deb$ ]] && file="code_${v}_$(echo "$file" |  cut -d_ -f3)" # remove serial number, i.e. code_1.76.2-1678817801_amd64.deb -> code_1.76.2_amd64.deb
		[[ "$file" == "VSCode-darwin-universal.zip" ]] && file="VSCode-darwin-universal-$v.zip"
		download "$url" "$(visualStudioCodeDir)" "$file" || return
	done

	downloadDone "$app" "$v"
}

visualStudioCodeDir() { echo "other/Microsoft/Visual Studio/code"; }
visualStudioCodeVersion() { curl --silent --header --location "$(visualStudioCodeUrl)" | cut -d- -f3 | RemoveEnd ".exe"; }
visualStudioCodeUrl() { echo "https://code.visualstudio.com/sha/download?build=stable&os=${1:-win32-x64}"; }

#################################################
# Time
#################################################

TimeAllInstall() { i chrony ChronyServer rtc timezone && pkg ntpdate tty-clock; }
TimeCoreInstall() { i chrony && pkg ntpdate tty-clock; }

ChronyInstall() # time syncronization / NTP replacement
{
	service exists systemd-timesyncd --quiet && return

	header "Chrony"

	if IsPlatform mac; then
		run "other/Chrony/chronycontrol-1.4.8.zip" || return # https://www.whatroute.net/chronycontrol.html#download
		start "ChronyControl" || return
	else
		pkg chrony ntpdate || return
	fi
}

ChronyServerInstall()
{
	header "Chrony Server"
	pkg chrony || return
	grep -q "^allow" "/etc/chrony/chrony.conf" && return
	echo "allow" | sudo ${G}tee -a "/etc/chrony/chrony.conf" || return
	service restart chrony || return
}

RtcInstall() { RunPlatform "rtc"; }

rtcPiKernel()
{
	# dependencies
	piI2cCheck || return
	! PackageListInstalled | sponge | grep --quiet "^python3-smbus:" &&  { package python3-smbus || return; }

	# check for RTC chip
	! sudoc i2cdetect -y 1 | sponge | grep --quiet -E "( 68|UU )" && { ScriptErr 'RTC chip not detected, try rebooting'; return 1; }

	# update config.txt if needed
	local file="/boot/firmware/config.txt"
	local line="include usercfg.txt"
	! grep --quiet "^$line$" "$file" && { echo "$line" | sudo ${G}tee -a "$file" || return; }

	# add kernel module
	local file="/boot/firmware/usercfg.txt"; IsPlatform pi && file="/boot/config.txt"
	local line="dtoverlay=i2c-rtc,ds3231"
	if ! grep --quiet "^$line$" "$file"; then
		echo "$line" | sudo ${G}tee -a "$file" || return
		rebootDo || return
		return 1
	fi

	# check for RTC
	! sudo i2cdetect -y 1 | sponge | grep --quiet -E "UU " && { ScriptErr 'RTC chip not detected'; return 1; }		

	# configure hwclock-set
	local file="/lib/udev/hwclock-set"
	local line="if \[ \-e \/run\/systemd\/system \] \; then"
	if grep --quiet "^$line$" "$file"; then
		sudoc sed -i '/^'"$line"$'/,+2s/^/#/' "$file" || return
	fi

	return 0
}

TimezoneInstall() { header "Timezone"; local timezone="$(ConfigGet "timezone")"; RunPlatform timezone; }
timezoneMessage() { hilight "Setting the timezone to '$timezone'..."; }

timezoneDebian()
{
	{ [[ ! $timezone ]] || IsPlatform win; } && return
	[[ ! $force ]] && cat "/etc/timezone" |& grep "$timezone" > /dev/null && return

	timezoneMessage
	DEBIAN_FRONTEND=noninteractive sudoc apt install -y tzdata || return
	[[ ! -f "/usr/share/zoneinfo/$timezone" ]] && return
	sudo ln -snf "/usr/share/zoneinfo/$timezone" "/etc/localtime" || return
	echo "$timezone" | sudo ${G}tee "/etc/timezone" || return
	sudo dpkg-reconfigure -f noninteractive tzdata || return
}

timezonePi()
{
	[[ ! $timezone ]] && return
	[[ ! $force ]] && cat /etc/timezone | grep -q "$timezone" && return

	timezoneMessage; sudo raspi-config nonint do_change_timezone "$timezone"
}

timezoneWin()
{
 	timezone="$(ConfigGet "timezoneWin")"; [[ ! $timezone ]] && return
 	[[ ! $force ]] && [[ $(tzutil.exe /g) == "$timezone" ]] && return
 	
  timezoneMessage; tzutil.exe /s "$timezone"
}


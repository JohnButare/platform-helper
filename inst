{
	echo "Updating registry..."
	$registry 32 delete "run/SunJavaUpdateSched"
	$registry 64 delete "run/SunJavaUpdateSched"

	echo "Updating icons..."
	JavaIcons || return

	ask "Test the Java browser plugin?" && JavaUtil test
	return 0
}


	! IsPlatform chroot,vm && { GitHelper clone bin || return; }
	return 0
}

gitCorePi() { pkg kompare || return; }

GitClientInstall() { RunPlatform gitClient; }
gitClientMac() { i Fork GitKraken SublimeMerge; }
gitClientPi() { pkg gitg || return; }
gitClientUbuntu() { i GitKraken SublimeMerge; }

gitClientWin()
{
 	# posix permissions do not work well on windows file systems
	if IsPlatform wsl1; then
		sudo git config --system core.filemode false || return
	fi
	return 0
}

ForkInstall()
{
	local v; v="$(getVersionCurrent "Fork")" || return
	run --name="Fork" "$(forkDir)/Fork-$v.exe|Fork-$v.dmg" --version="$v"
}

ForkFinalWin() { mergeDir "$up/Fork" "$up/Development/Other" && $rm "$ud/Fork.lnk" && gitFixWin "$(GetDirs "$UADATA/Fork/GitInstance/" | tail -1)/bin/git.exe"; }
ForkHelpMac() { echot "- Preferences, Integration, Install Command Line Tools"; }
ForkProfile() { ForkHelper $noPrompt profile restore default; }

ForkDownload()
{
	local app="Fork"; downloadStart "$app" || return 0
	local v; v="$(getVersionCurrent "$app")" || return; download "https://cdn.fork.dev/$PLATFORM_OS/Fork-$v.$(getPlatform "exe" "dmg")" "$(forkDir)" && downloadDone "$app" "$v"
}

forkDir() { echo "git/Fork"; }

forkVersion()
{
	IsPlatform mac && { forkVersionHelper; return; }
	
	# the latest win downloads may onlt be a nupkg (https://fork.dev/update/win/RELEASES?id=Fork&localVersion=1.86.1&arch=amd64)
	# so try and get the latest version first, then the second to latest version
	forkVersionHelper 1 || forkVersionHelper 2
}

forkVersionHelper()
{
	local line="${1:-1}" # version to get, i.e. 1st, 2nd, ...
	local ext="dmg" platform="mac" win; IsPlatform win && ext="exe" platform="win" win="win"
	local prefix="$(curl --silent https://git-fork.com/releasenotes${win} | grep "header4" | sed "${line}q;d" | sed 's/.*Fork //' | cut -d"<" -f1)"
	local suffix suffixes=(".3" ".2" ".1" "")
	for suffix in "${suffixes[@]}"; do
		local url="https://cdn.fork.dev/$platform/Fork-$prefix${suffix}.$ext"
		checkUrl "$url" && { echo "$prefix$suffix"; return; }
	done
	return 1
}

GitUpInstall() { run --python-global git-up && git config --global git-up.rebase.auto false; }

GitExtensionsInstall()
{
	header "Git Extensions"

	# https://github.com/gitextensions/gitextensions/releases/latest
	run "git/GitExtensions/setup/GitExtensions-3.4.1.9675.msi" || return

	if [[ ! -d "$UADATA/../Roaming/GitExtensions/GitExtensions" ]]; then
		GitHelper gui || return
		echot "- English, Quit"
		pause
	fi

	local f="$WIN_HOME/.gitconfig.backup"
	[[ -f "$f" ]] && { attrib "$f" -h -s || return; }
	FileTouchAndHide "$WIN_HOME/.gitconfig.backup" || return
}

GitExtensionsProfile() { GitHelper profile restore default; }


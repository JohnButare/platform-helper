GitCore()
{		
	Git${PLATFORM^}Core || return
	i GitUp
	ask 'Configure git' && { GitConfigure || return; }
	ask 'Clone bin' && { GitHelper bin || return; }
	return 0
}

GitConfigure()
{
	local args name program

	FindEditorProgram || return
	$sudo git config --system core.editor "\"$program\" $args" || return

	FindCompareProgram || return

	$sudo git config --system difftool.$name.trustExitCode "true" || return
	$sudo git config --system difftool.$name.cmd "\"$program\" $args "'"$LOCAL" "$REMOTE"' || return
	
	$sudo git config --system mergetool.$name.trustExitCode "true" || return
	$sudo git config --system mergetool.$name.cmd "\"$program\" $args "'"$LOCAL" "$REMOTE" "$BASE" "$MERGED"' || return

	if [[ "$PLATFORM" != "win" ]]; then
		$sudo git config --global difftool.$name.trustExitCode "true" || return
		$sudo git config --global difftool.$name.cmd "\"$program\" $args "'"$LOCAL" "$REMOTE"' || return
		
		$sudo git config --global mergetool.$name.trustExitCode "true" || return
		$sudo git config --global mergetool.$name.cmd "\"$program\" $args "'"$LOCAL" "$REMOTE" "$BASE" "$MERGED"' || return
	fi

	FindCompareProgram || return
	git config --global merge.tool "$name" || return
	git config --global diff.tool "$name" || return	
	git config --global diff.guitool "$name" || return	
}


GitWinCore()
{
	ask 'Install Cygwin git' && { i CygwinGit || return; }
	ask 'Install Git for Windows' && { i GitForWindows || return; }
	ask 'Install Git Extensions' && { i GitExtensions || return; }

	ScriptEval intel SetProxy || return

	ask 'Install git-extras' && 
		{ (cd /tmp && git clone --depth 1 https://github.com/tj/git-extras.git && cd git-extras && make install) || return; }

	cp "$setupFiles/hub.bash_completion.sh" "$COMPLETION/hub" || return
}

GitMacCore()
{
	i GitX || return
	ask 'Install git-extras and hub' && { brew install git-extras hub || return; }
}

GitLinuxCore()
{
	sudo apt-get install -y git || return
}

GitUpInstall()
{
	pip install git-up || return;
	git config --global git-up.rebase.auto false || return
}

CygwinGit()
{
	local gw="$P/Git/cmd/git" gc="/usr/bin/git"

	if [[ ! $noRun ]]; then
		cygwin package git || return
		cygwin FixCompletion || return
	fi

	echo "Configuring git..."

	"$gc" config --system core.autocrlf false || return
	"$gc" config --system core.filemode false || return
	"$gc" config --system credential.helper wincred || return

	FindEditorProgram || return
	"$gc" config --system core.editor "sublime start --wait" || return

	"$gc" config --system difftool.$name.trustExitCode "true" || return
	"$gc" config --system difftool.$name.cmd "BeyondCompare --wait "'"$LOCAL" "$REMOTE"' || return
	"$gc" config --system mergetool.$name.trustExitCode "true" || return
	"$gc" config --system mergetool.$name.cmd "BeyondCompare --wait "'"$LOCAL" "$REMOTE" "$BASE" "$MERGED"' || return
}

gfwInstall() { GitForWindowsInstall; }
GitForWindowsInstall()
{
	local gw="$P/Git/cmd/git" gc="/usr/bin/git"
	printf "**************************************************\n* Git for Windows\n**************************************************\n"
	
	echot "\
- Select Components
	- uncheck Windows Explorer Integration
	- (Cygwin) uncheck Associate .sh files to be run with Bash
- Use Git from Git Bash only
- Checkout as-is, commit as-is
- uncheck View ReleaseNotes.rtf"
	run "Shareware/Git for Windows/setup/Git-2.20.1-64-bit.exe" || return # https://github.com/git-for-windows/git/releases/

	if [[ -f "$P/Git/usr/bin/ssh.exe" ]]; then
		echo "Enabling Cygwin ssh..."
		mv "$P/Git/usr/bin/ssh.exe" "$P/Git/usr/bin/ssh_hold.exe" || return
	fi
	
	echo "Updating icons..."
	$mergeDir "$pp/Git" "$pp/Development/Other"
	$mergeDir "$up/Git" "$pp/Development/Other"
	
	echo "Configuring http.sslcainfo..."
	"$gc" config --system http.sslcainfo "$P/Git/usr/ssl/certs/ca-bundle.crt" || return
	"$gw" config --system http.sslcainfo "$(utw "$P/Git/usr/ssl/certs/ca-bundle.crt")" || return

	echo "Configuring git..."
	"$gw" config --system core.fscache true || return
	"$gw" config --system core.filemode false || return
	"$gw" config --system core.autocrlf false || return
	"$gw" config --system credential.helper wincred || return

	FindEditorProgram || return
	"$gw" config --system core.editor "\"$(utw $program)\" $args" || return

	FindCompareProgram || return
	"$gw" config --system difftool.$name.trustExitCode "true" || return
	"$gw" config --system difftool.$name.cmd "\"$(utw $program)\" $args "'"$LOCAL" "$REMOTE"' || return
	"$gw" config --system mergetool.$name.trustExitCode "true" || return
	"$gw" config --system mergetool.$name.cmd "\"$(utw $program)\" $args "'"$LOCAL" "$REMOTE" "$BASE" "$MERGED"' || return
}


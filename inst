TerminalAllInstall() { i iTerm terminator tmux Warp WindowsTerminal; }

iTermInstall()
{
	local v; v="$(getVersionCurrent "iTerm")" || return
	run --name="iTerm" "$(iTermDir)/iTerm2 $v.zip" --version="$v"

	# shell intergration - https://iterm2.com/documentation-shell-integration.html
	if [[ $force || -f "$FILE/.iterm2_shell_integration.zsh" ]]; then
		curl -L "https://iterm2.com/shell_integration/install_shell_integration_and_utilities.sh" | bash || return
	fi

	return 0
}

iTermFinalMac() { dockutil --find "iTerm" >& /dev/null && return; dockutil --add "/Applications/iTerm.app"; }

iTermHelp()
{
	local clip; clip="$udata/profile/default"; clipw "$clip"
	echot "- Settings..., General, Preferences, check Load preferences from a custom folder, Browse, $clip"
	iterm start || return
}

iTermDownload()
{
	local app="iTerm"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local type="stable" vActual="$v"; [[ "$installType" == "beta" ]] && type="beta" v="$(iTermVersionBetaFull)"
	download "https://iterm2.com/downloads/$type/iTerm2-${v//./_}.zip" "$(iTermDir)" "iTerm2 $vActual.zip" && downloadDone "$app" "$vActual"
}

iTermDir() { echo "platform/mac/iTerm2"; }
iTermVersion() { scurl --silent --location "https://iterm2.com/downloads.html" | sgrep "iterm2" | shead -1 | sed 's/.*iTerm2 //' | cut -d" " -f1; }
iTermVersionBeta() { iTermVersionBetaFull | sed 's/beta.*//'; }
iTermVersionBetaFull() { scurl --silent --location "https://iterm2.com/downloads.html" | sgrep "beta" | sgrep "iterm2" | shead -1 | sed 's/.*iTerm2 //' | cut -d" " -f1; }

TerminatorInstall() { run --package terminator; }
TerminatorProfile() { TerminatorHelper $noPrompt profile restore default; }

TmuxInstall() { run --package "tmux"; }

TmuxProfile()
{
	# https://github.com/gpakosz/.tmux
	[[ ! -d "$HOME/.tmux" ]] && { git clone "https://github.com/gpakosz/.tmux.git" "$HOME/.tmux" || return; }
	ln -s -f ".tmux/.tmux.conf" "$HOME" && ln -s -f "$UBIN/.tmux.conf.local" "$HOME"
}

WarpInstall()
{
	local v; v="$(getVersionCurrent "warp")" || return
	run --name="Warp" "$(warpDir)/Warp ${v}.dmg" --version="$v"
}

WarpProfile() { warp profile restore default && warp startup; }

WarpDownload()
{
	local app="warp"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "$app")" || return
	local url; url="$(warpFindUrl)" || return
	download "$url" "$(warpDir)" "Warp ${v}.dmg" && downloadDone "$app" "$v"
}

warpDir() { echo "platform/mac/Warp"; }

warpVersion()
{
	! IsPlatform mac && return 1
	local dmg="$(mktemp)" plist="$(mktemp -d)/Info.plist"
	local url; url="$(warpFindUrl)" || return; log1 "url=$url"
	curl --silent --location "$url" --output "$dmg" || return
	7z x "$dmg" "Warp/Warp.app/Contents/Info.plist" -so > "$plist" || { warpVersionClean 1; return; }
	log1 "extract $plist"
	defaults read "$plist" CFBundleVersion || { warpVersionClean "$?"; return; }
	warpVersionClean
}

warpVersionClean() { rm -fr "$dmg" "$(GetFilePath "$plist")"; return "${1:-0}"; }

warpFindUrl()
{
	local stamp; stamp="$(scurl --silent --location "https://docs.warp.dev/getting-started/changelog" | sgrep --text "gitbook-root" | tr '</span>' '\n' | sgrep --text "(v0" | sort -V --reverse | shead -1 | sed 's/.* (v//' | cut -d")" -f1)" || return
	local url="https://releases.warp.dev/stable/v${stamp}.stable_0"'${i}'"/Warp.dmg"
	local i result tryUrl

	logp1 "Finding Warp version..."

	for (( i = 5; i >= 0; i-- )); do
		tryUrl="$(eval echo $url)"
		scurl --silent "$tryUrl" --head | sgrep --quiet "404" && { logp1 "."; continue; }
		logp1 "found\n"; echo "$tryUrl"; return
	done

	PrintErr "not found"
	return 1
}

WindowsTerminalInstall()
{
	header "Windows Terminal" # https://github.com/microsoft/terminal/releases
	local wtVersion wtSuffix; ScriptEval WindowsTerminal config || return

	# version check	
	[[ ! $force && "$wtVersion" == "$(WindowsTerminal version)" ]] && return

	# install
	if [[ "$installType" == @(|local) ]] && CanElevate; then
		run "other/Microsoft/Windows/terminal/Microsoft.WindowsTerminalPreview_${wtVersion}_${wtSuffix}.msixbundle" || return
	else
		run --store "9N8G5RFZ9XK3" || return
	fi
}

WindowsTerminalHelp()
{
	echot "- Settings, Startup
	- Default profile=$(wsl get name)
	- Startup, Default terminal application=Windows Terminal Preview"
}


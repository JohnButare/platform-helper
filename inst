CleanMyMacDownload()
{
	local app="CleanMyMac"; downloadStart "$app" || return 0	
	local v; v="$(getVersionCurrent "CleanMyMac")" && download "https://dl.devmate.com/com.macpaw.CleanMyMac4/CleanMyMacX.dmg" "$(cleanMyMacDir)" "CleanMyMac $v.dmg" && downloadDone "$app" "$v"
}

cleanMyMacDir() { echo "platform/mac/MacPaw/CleanMyMac"; }
cleanMyMacVersion() { scurl --silent --location "https://macpaw.com/cleanmymac/whats-new" | sgrep 'class="version">Update ' | shead -1 | sed 's/.*Update //' | cut -d'<' -f1; }


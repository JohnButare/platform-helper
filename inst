#!/usr/bin/env bash
. AppControl.sh || exit
. script.sh || exit
. color.sh || exit

usage()
{
	ScriptUsage "$1" "\
Usage: $(ScriptName) [OPTION]... [COMMAND]...
Programs installation.

	install	[APP]...		install applications
	installed						return installed applications
	check								check application versions
	list								list all applications
	update							installed applications requiring an update"
}

init() { defaultCommand="install" hostname="$HOSTNAME"; unset sshAgentChecked; }

#
# commands
#

listCommand() { declare -f | grep --basic-regexp '.*Install () ' | cut -d" " -f1 | sed "s/Install//" | grep -v "^$" | sort --ignore-case; }
updateCommand() { detail="--detail" checkCommand | awk '{ if ($2 == "yes") print $1; }'; }

installedCommand()
{
	local app apps; IFS=$'\n' ArrayMake apps "$(listCommand)"
	for app in "${apps[@]}"; do		
		! isCollection "$app" && appIsInstalled "$app" && echo "$app"
	done
	return 0
}

#
# check command
#

checkUsage()
{
	EchoWrap "Usage: $(ScriptName) check [APP]...(all installed and downloaded)
Check the version of applicaitons.

	-a,	--all			check applications with download in addition to installed runProgramDescription
	-d,	--detail	show additional detail
	-u,	--update	only show applications which need to be updated"
}

checkArgStart() { unset -v allArg appsArg detail update; }
checkArgs() { appsArg=("$@"); shift="$#"; }

checkOpt()
{
	case "$1" in
		--all|-a) allArg="--all";;
		--detail|-d) detail="--detail";;
		--update|-u) update="--update";;
		*) return 1;;
	esac
}

checkCommand()
{
	local product term="$TERM"; [[ ! $term ]] && term="xterm-256color"
	local app apps=() appsInstalled=() appsDownloaded=() 
	local appsToIgnore=(apache chroot CreativeCloud cron DellDisplayManager duf hashi hostname hyperv java kea lolcat office qnap SqlServer VisualStudio xQuartz xServer)
	local cacheInstalled="install-installed-apps" cacheDownloaded="install-downloaded-apps"

	installInit || return

	[[ ! $appsArg && ! $verbose  && ! $quiet ]] && PrintErr "checking..."

	# use specified apps
	if [[ $appsArg ]]; then

		# check applications and get their install function
		for app in "${appsArg[@]}"; do
			local appFunction; appFunction="$(getInstallFunction "$app")" || { ScriptErr "'$app' installation does not exist"; return 1; }
			appsInstalled+=( "$(RemoveEnd "$appFunction" "Install")" )
		done

		[[ ! $verbose && ! $quiet ]] && PrintErr "checking..."

	# get installed and downloaded applications
	elif force="$forceLess" UpdateNeeded "$cacheInstalled" || force="$forceLess" UpdateNeeded "$cacheDownloaded"; then
		IFS=$'\n' ArrayMake apps "$(listCommand)"

		for app in "${apps[@]}"; do

			[[ ! $verbose  && ! $quiet ]] && PrintErr "."
			logp1 "$(ScriptPrefix)checking ${app}..."

			if ! isCollection "$app" && ! IsInArray --case-insensitive "$app" appsToIgnore; then
				appIsInstalled "$app" && { logp1 "installed..."; appsInstalled+=("$app"); }
				IsFunction "${app}Download" && { logp1 "downloadable..."; appsDownloaded+=("$app"); }
			fi

			logp1 "done\n"

		done

		UpdateSet "$cacheInstalled" "$(GetDef appsInstalled)" || return			
		UpdateSet "$cacheDownloaded" "$(GetDef appsDownloaded)" || return

	# get cached installed and downloaded applications
	else
		eval "appsInstalled=( $(UpdateGet "$cacheInstalled") )" || return
		eval "appsDownloaded=( $(UpdateGet "$cacheDownloaded") )" || return
	fi

	# logging
	if [[ ! $appsArg ]] && (( verboseLevel > 1 )); then
			printf "appsInstalled="; ArrayShow appsInstalled
			printf "appsDownloaded="; ArrayShow appsDownloaded
	fi

	# get apps to check (installed and downloaded)
	apps=( "${appsInstalled[@]}" )
	if [[ $allArg ]]; then
		for app in "${appsDownloaded[@]}"; do
			IsInArray "$app" appsInstalled && continue
			[[ "$app" == @(Warp) ]] && ! IsPlatform mac && continue # can only check Warp version on mac
			apps+=("$app")			
		done				
	fi

	# add alternate version 
	IsPlatform win && IsInArray "GitKraken" apps && apps+=(GitKrakenDeb)

	# get packages
	local packages cache="install-check-packages"
	if UpdateNeeded "$cache"; then
		log1 "Getting packages..."
		packages=( $(PackageListInstalled) ) || return
		IsInArray --case-insensitive "p7zip" packages && packages+=( 7zip )
		IsInArray --case-insensitive "python@3.10" packages && packages+=( python python3.10 )
		IsInArray --case-insensitive "python@3.11" packages && packages+=( python python3.11 )
		UpdateSet "$cache" "$(GetDef packages)" || return
	else
		eval "packages=( $(UpdateGet "$cache") )" || return
	fi

	# get Python global pipx packages
	local pipxg cache="install-check-pipxg"
	if UpdateNeeded "$cache"; then
		log1 "Getting Python packages..."
		sudov || return
		pipxg=( $(pipxg list | grep "package " | sed 's/.*package //' | cut -d" " -f1) ) || return
		UpdateSet "$cache" "$(GetDef pipxg)" || return
	else
		eval "pipxg=( $(UpdateGet "$cache") )" || return
	fi

	# pip
	local pip=(pip pipx)

	# show versions
	local filter; [[ $update ]] && filter=' yes '
	{
		if [[ $detail ]]; then
			hilight "app-update-${PAD}installed${PAD}-${PAD}downloaded${PAD}-current"
		else
			hilight "app-${PAD}installed${PAD}-${PAD}downloaded${PAD}-current"
		fi

		for app in "${apps[@]}"; do
			checkApp "$app" || return
			IsFunction "${app,}VersionBeta" && { installType="beta" checkApp "$app" || return; }
		done

		[[ ! $verbose && ! $quiet ]] && { PrintErr "done" && EchoErr ""; }

	} | column -c $(tput cols -T "$term") -t -s- | grep "$filter"
}

checkApp()
{
	local app="$1" appName="$1" installed="" downloaded="" update="no" current=""
	local type; [[ $installType ]] && type=" ($installType)"
	local alternate; [[ "$app" =~ Deb$ ]] && alternate="--alternate" app="$(RemoveEnd "$app" "Deb")"

	# get installed version
	log1 "Getting ${appName}${type} installed version..."	
	installed="$(AppVersion --allow-alpha $alternate --quiet --cache $force "$app" | ReplaceString "-" "_")"

	# get download version
	if IsFunction "${app}Download"; then
		log1 "Getting ${appName}${type} downloaded version..."
		downloaded="$(getVersionDownloaded "$app" | ReplaceString "-" "_")"  || ScriptErr "unable to get '$app' downloaded version"
		[[ ! $verbose && ! $quiet ]] && PrintErr "."
	elif [[ ${storeIds[$app]} ]]; then
		downloaded="store"
	elif IsInArray --case-insensitive "$app" packages; then
		downloaded="package"
	elif IsInArray --case-insensitive "$app" pip; then
		downloaded="pip"
	elif IsInArray --case-insensitive "$app" pipxg; then
		downloaded="pipxg"
	elif IsPlatform mac && [[ "$(FindInPath "${app,,}")" == @(/usr/bin/gcc) ]]; then
		downloaded="os"
	fi

	# get current version	
	if isStoreApp "$app" || IsFunction "${app,}Version"; then
		log1 "Getting ${appName}${type} current version..."
		if ! current="$(force="$forceLess" getVersionCurrent "$app" | ReplaceString "-" "_")"; then
			local error="unable to get '$app${type}' current version"
			[[ "$installType" != "beta" ]] && ScriptErr "$error" || log1 "$error"
		fi
		[[ ! $verbose && ! $quiet ]] && PrintErr "."
	fi

	# hide installed version if needed
	[[ ! $current && "$installType" == "beta" ]] && installed=""

	if [[ $current && "$installed" != "$current" ]] && ! IsNumericEqual "$installed" "$current"; then

		# regular version is installed and showing beta version
		if [[ "$installType" == "beta" ]]; then
			local regularVersion; installType="" regularVersion="$(installType="" force="$forceLess" getVersionCurrent "$app")" || ScriptErr "unable to get '$app' current non-beta version"
			{ [[ "$installed" == "$regularVersion" ]] || versionIsOlder "$installed" "$regularVersion"; } && installed=""

		# has a beta version and it is installed and showing regular version
		else
			versionIsNewer "$installed" "$current" && IsFunction "${app,}VersionBeta" && installed=""
		fi
	fi

	# return if no versions are available
	[[ "$installed" == "" && ! $downloaded && ! $current ]] && return

	# if the installed version is older than the current version, hilight it in red
	[[ $current && $installed ]] && versionIsOlder "$installed" "$current" && update="yes" installed="${RED}$installed${RESET}" || installed="${PAD}$installed${PAD}"

	# if the downloaded version is older than the current version, hilight it in red
	[[ $current && $downloaded != @(|os|package|pip|pipxg|store) ]] && versionIsOlder "$downloaded" "$current" && downloaded="${RED}$downloaded${RESET}" || downloaded="${PAD}$downloaded${PAD}"

	# show results
	if [[ $detail ]]; then
		echo "${PAD}${appName}${type}-${update}-${installed}-${downloaded}-${current}"
	else
		echo "${PAD}${appName}${type}-${installed}-${downloaded}-${current}"
	fi
}

#
# install command
#

installUsage()
{
	EchoWrap "Usage: $(ScriptName) install [OPTION]... [APP]...
Install an application.  To run a portion of the installation, the application name can be suffixed with download, final, help, profile, or register.  For example, 'inst SublimeProfile'.

	     --force-full			force a full install, even on hosts targeted for a minimal install
	     --hint=DIR				first directory to search for installation files
	-H,  --host=HOST			comma separated list of hosts for the installation
	-nh, --no-header	   	suppress headers
	-np, --no-prompt	   	suppress interactive prompts
	-s,  --select					select the install location
	-t,  --type=TYPE      $installTypes"
}

installArgStart()
{ 
	unset -v alternate apps forceFull hint hostArg hostOpt hosts installType noHeader noHelp npProfile noPrompt noRegister noRun select
	installTypes="alternate|beta|compile|local|package|store"
}

installOpt() 
{
	case "$1" in
		--force-full) forceFull="--force-full";;
		--hint) ScriptOptGet "hint" "$@"; export INSTALL_DIR="$hint"; hint=(--hint "$hint");;
		--host|--host=*|-H|-H=*) ScriptOptGet hostArg host "$@";;
		--no-header|-nh) noHeader="--no-header";;
		--no-help) noHelp="--no-help";;
		--no-profile) noProfile="--no-profile";;
		--no-prompt|-np) noPrompt="--no-prompt";;
		--no-register) noRegister="--no-register";;
		--no-run|-nr) noRun="--no-run";;
		--select|-s) select="--select";;
		--type|--type=*|-t|-t=*) installOptType "$@";;
		*) return 1
	esac
}

installOptType()
{
	ScriptOptGet installType type "$@" || return
	installType="${installType,,}"
	[[ "$installType" == "alternate" ]] && alternate="--alternate"
	[[ "$installType" == @($installTypes) ]] && return
	ScriptErr "'$installType' is not a valid type"; ScriptTry
}

installArgs() { apps=("$@"); shift="$#"; }

installCommand() { installDo; }

installDo() { installInit && i $noPrompt "${apps[@]}"; }


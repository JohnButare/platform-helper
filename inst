AltTabTerminator() { HiddenStart; };
HiddenStart()
{
	( intel IsIntelHost || [[ "$PLATFORM" != "win" ]] ) && return 0;

	printf "**************************************************\n* Hidden Start\n**************************************************\n"
	run "NTwind/AltTabTer_3.7-setup.exe" || return
	run "NTwind/Hstart_4.6-setup.exe" || return # https://www.ntwind.com/software/hstart.html

	echo "Updating icons..."
	$mergeDir "$pp/Alt-Tab Terminator" "$pp/Operating System/Other" || return
	$mergeDir "$pp/Hidden Start" "$pp/Operating System/Other" || return
	$rm "$pd/Alt-Tab Terminator.lnk" || return
	$rm "$pd/Hidden Start.lnk" || return

	echo "Updating registry..."	
	$registry delete "urun/Alt-Tab Terminator" # "C:\Program Files\Alt-Tab Terminator\AltTabTer64.exe" /startup
}

